<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>

        <item name="primaryTextColor">@color/dark_grey</item>
        <item name="secondaryTextColor">@color/white</item>
        <item name="appBackgroundColor">@color/white</item>
        <item name="popupBackgroundColor">@color/md_grey_50</item>
        <item name="popupBackgroundShadowColor">@color/md_grey_300</item>
        <item name="appDividerColor">@color/divider_color_not_night</item>
        <item name="appIconColor">@color/icon_color_not_night</item>
        <item name="appSecondBackground">@color/dark_med_grey</item>
        <item name="greyTextColor">@color/md_grey_600</item>
        <item name="darkGreyTextColor">@color/input_login_hint</item>
        <item name="appThirdBackground">@color/md_grey_50</item>
        <item name="tagBackgroundColor">@color/divider_grey</item>
        <item name="cardViewStyles">@style/CardView.Light</item>
        <item name="shareContentFillColor">@color/render_content_selection_color</item>
        <item name="meaningWordBgClose">@color/word_meaning_bg_color</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <!--        <item name="android:popupBackground">?appBackgroundColor</item>-->
        <!--        <item name="android:background">@drawable/touch_effect</item>-->
        <item name="android:textColor">?primaryTextColor</item>
        <item name="android:itemBackground">@drawable/popup_menu_background</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="AutoCompleteStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">#F00</item>
        <!--                <item name="android:background">@drawable/background_with_shadow</item>-->
        <!--                <item name="android:itemBackground">#F00</item>-->
        <!--        <item name="colorControlHighlight">@color/black</item>-->
        <!--        <item name="android:textColor">?primaryTextColor</item>-->

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">?primaryTextColor</item>
        <item name="android:background">?appBackgroundColor</item>
    </style>


    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:layout_margin">0sp</item>
    </style>
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">?appBackgroundColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="FOL_Theme_SnackbarWrapper" parent="@style/Theme.AppCompat">
        <!--Insert customization here-->
    </style>
