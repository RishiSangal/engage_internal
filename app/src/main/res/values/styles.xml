    <declare-styleable name="RoundedCornerLayout">
        <attr name="outerBackground" format="color" />
    </declare-styleable>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/switch_color</item>
        <item name="colorControlNormal">@color/md_grey_600</item>
        <item name="android:colorForeground">@color/md_grey_400</item>
    </style>

    <style name="TabStyle">
        <item name="stl_customTabTextLayoutId">@layout/custom_tab</item>
        <item name="stl_customTabTextViewId">@id/custom_text</item>
        <item name="stl_underlineThickness">0dp</item>
        <item name="stl_indicatorColor">@color/colorPrimary</item>
        <item name="stl_indicatorInterpolation">linear</item>
        <item name="stl_indicatorThickness">4dp</item>
        <item name="android:background">?appBackgroundColor</item>
        <item name="stl_dividerThickness">0dp</item>
        <item name="stl_titleOffset">auto_center</item>
    </style>

    <declare-styleable name="CommonImageView">
        <attr name="rotateForRtl" format="boolean" />
    </declare-styleable>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slideup</item>
        <item name="android:windowExitAnimation">@anim/slidedown</item>
    </style>

    <style name="LatoRegular">
