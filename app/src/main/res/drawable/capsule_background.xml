<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/skyblue"
    tools:targetApi="LOLLIPOP">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/_15sdp"
                android:bottomRightRadius="@dimen/_15sdp"
                android:radius="@dimen/_30sdp"
                android:topLeftRadius="@dimen/_15sdp"
                android:topRightRadius="@dimen/_15sdp" />
            <solid android:color="@color/skyblue" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/_15sdp"
                android:bottomRightRadius="@dimen/_15sdp"
                android:radius="@dimen/_30sdp"
                android:topLeftRadius="@dimen/_15sdp"
                android:topRightRadius="@dimen/_15sdp" />

            <solid android:color="?appBackgroundColor" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <size android:height="@dimen/_30sdp" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="?appDividerColor" />
        </shape>
    </item>

</ripple>


