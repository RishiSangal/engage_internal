<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetTemplate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?appBackgroundColor">

    <LinearLayout
        android:id="@+id/viewHo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginTop="@dimen/_9sdp"
        android:orientation="vertical">

        <com.example.sew.views.SquareImageView
            android:id="@+id/imgShayariImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/icon" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/viewSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/viewHo"
        android:layout_alignTop="@+id/viewHo"
        android:layout_alignEnd="@+id/viewHo"
        android:layout_alignBottom="@+id/viewHo"
        android:background="@drawable/favorite_image_selection">
        <com.example.sew.views.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rico_checked"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_25ssp" />
    </RelativeLayout>
</RelativeLayout>