<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?appBackgroundColor"
    android:orientation="vertical">

    <include layout="@layout/header_type_1" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomBar"
        android:fitsSystemWindows="false">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?appBackgroundColor">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    app:layout_collapseMode="parallax">
                    <ImageView
                        android:id="@+id/imgBannerImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_170sdp"
                        android:src="@drawable/home"
                        android:scaleType="fitXY"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shadow_toolbar"
                        android:rotation="180" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">



                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/userImage"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/icon" />

                        <com.example.sew.views.TitleTextViewType2
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/userImage"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="UserName"
                            android:textColor="@color/white" />
                        <com.example.sew.views.TitleTextViewType6
                            android:id="@+id/txtFavTabMyFavoriteCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/userName"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:text=""
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </RelativeLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_anchorGravity="bottom"
                android:background="?appBackgroundColor">
                <com.ogaclejapan.smarttablayout.SmartTabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    app:layout_anchorGravity="bottom"
                    app:stl_customTabTextLayoutId="@layout/custom_tab_without_view"
                    app:stl_customTabTextViewId="@id/custom_text"
                    app:stl_indicatorColor="@color/colorPrimary"
                    app:stl_indicatorInterpolation="linear"
                    app:stl_underlineThickness="0dp"
                    app:stl_titleOffset="auto_center"
                    app:stl_indicatorThickness="4dp"
                    android:background="?appBackgroundColor"
                    app:stl_dividerThickness="0dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="?appDividerColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_alignBottom="@+id/tabLayout"
                    android:background="?appDividerColor" />
            </RelativeLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_50sdp"
            android:background="?appBackgroundColor"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?appDividerColor" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include
        android:id="@+id/bottomBar"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>