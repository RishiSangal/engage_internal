<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?appBackgroundColor"
    android:theme="@style/AppTheme.AppBarOverlay"
    tools:targetApi="lollipop">

    <!--    <include layout="@layout/header_type_2" />-->
    <include layout="@layout/header_type_4" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?appDividerColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?appBackgroundColor"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp">
            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtNotificationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_22sdp"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/md_grey_1400"
                android:textStyle="bold"
                android:textSize="@dimen/_11ssp"
                tools:text="Notification" />
            <LinearLayout
                android:id="@+id/layGenricNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtGenericNotificationTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        tools:text="Genric Notifications" />

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtGenericNotificationSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/md_grey_1200"
                        android:textSize="@dimen/_11ssp"
                        tools:text="All other news and happenings at Rekhta" />
                </LinearLayout>


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swGenericNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:theme="@style/SwitchCompatTheme"
                    tools:text="Switch" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">



                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtSherOfTheDayTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_14ssp"
                        tools:text="Sher of the Day" />

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtSherOfTheDaySubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/md_grey_1200"
                        android:textSize="@dimen/_11ssp"
                        tools:text="Remove STOD images daily" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swSherOfTheDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:theme="@style/SwitchCompatTheme"
                    tools:text="Switch" />
            </LinearLayout>

            <com.example.sew.views.TitleTextView
                android:id="@+id/txtPreferredLangTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="gone"
                tools:text="Preferred Language(s)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:visibility="gone"
                android:orientation="horizontal">

                <com.example.sew.views.TitleTextView
                    android:id="@+id/txtPreferredLangEng"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20sp"
                    android:paddingTop="2dp"
                    android:paddingRight="20sp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="English" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/chkPreferredLangEng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:buttonTint="@color/colorPrimary"
                    android:checked="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <com.example.sew.views.TitleTextView
                    android:id="@+id/txtPreferredLangHin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:paddingTop="2dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Hindi" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/chkPreferredLangHin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:buttonTint="@color/colorPrimary"
                    android:checked="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:visibility="gone"
                android:orientation="horizontal">

                <com.example.sew.views.TitleTextView
                    android:id="@+id/txtPreferredLangUrdu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:paddingTop="2dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Urdu" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/chkPreferredLangUrdu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:buttonTint="@color/colorPrimary"
                    android:checked="true" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15sp"
                android:visibility="gone"
                android:background="@color/divider_grey"
                android:padding="2sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:visibility="gone"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtWordOfTheDayTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?primaryTextColor"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14ssp"
                        tools:text="Word Of The Day" />

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtWordOfTheDaySubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/md_grey_1200"
                        android:textSize="@dimen/_11ssp"
                        tools:text="Receive a Word-Meaning image daily" />
                </LinearLayout>


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swWordOfTheDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:theme="@style/SwitchCompatTheme"
                    tools:text="Switch" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15sp"
                android:background="@color/divider_grey"
                android:padding="2sp"
                android:visibility="gone"/>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15sp"
                android:visibility="gone"
                android:background="@color/divider_grey"
                android:padding="2sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:visibility="gone"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtCommentTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?primaryTextColor"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14ssp"
                        tools:text="Comment Notification" />

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtCommentSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/md_grey_1200"
                        android:textSize="@dimen/_11ssp"
                        tools:text="Notify me about my comments replies" />
                </LinearLayout>


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:theme="@style/SwitchCompatTheme"
                    tools:text="Switch" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layEventNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtEventNotificationTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        tools:text="Event Notification" />

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtEventNotificationSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/md_grey_1200"
                        android:textSize="@dimen/_11ssp"
                        tools:text="Updates about Rekhta events and gatherings" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swEventNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:theme="@style/SwitchCompatTheme"
                    tools:text="Switch" />

            </LinearLayout>

            <View
                android:id="@+id/viewNotification"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="?appDividerColor"
                android:padding="2sp" />
            <LinearLayout
                android:id="@+id/layChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical"
                android:visibility="gone">


                <com.example.sew.views.TitleTextView
                    android:id="@+id/txtAccountTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:padding="2sp"
                    android:textAllCaps="true"
                    android:textColor="#939393"
                    android:textSize="@dimen/_12ssp"
                    tools:text="Account" />

                <com.example.sew.views.TitleTextView
                    android:id="@+id/txtChangePasswordTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="2sp"
                    android:textColor="?primaryTextColor"
                    android:textSize="16sp"
                    tools:text="Change Password" />

                <com.example.sew.views.TitleTextView
                    android:id="@+id/txtSetNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2sp"
                    android:textColor="#939393"
                    android:textSize="14sp"
                    tools:text="Set a new password for your Rekhta account" />

            </LinearLayout>
            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtFavManagementTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_22sdp"
                android:layout_marginBottom="@dimen/_22sdp"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/md_grey_1400"
                android:textSize="@dimen/_11ssp"
                tools:text="Favorites Management" />
            <LinearLayout
                android:id="@+id/laySaveFavOffline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtSaveFavOfflineTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_14ssp"
                        tools:text="Save Favorites Offline" />

                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swSaveFavOnline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:buttonTint="@color/switch_color"
                    android:checked="true"
                    android:theme="@style/SwitchCompatTheme" />
            </LinearLayout>

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtSaveFavOfflineSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/md_grey_1200"
                android:textSize="@dimen/_11ssp"
                tools:text="Download Your favorite content for offline reading " />

            <View
                android:id="@+id/viewFavorite"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="?appDividerColor"
                android:padding="2sp" />


            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/md_grey_1400"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                android:text="" />

            <LinearLayout
                android:id="@+id/layDarkTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/touch_effect"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:gravity="center">


                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtDarkTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:text="AnujAgrawal" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_8sdp">
                        <com.example.sew.views.TitleTextViewType6
                            android:id="@+id/txtCurrentTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Theme: "
                            android:visibility="gone"
                            android:textColor="@color/md_grey_1200"
                            android:textSize="@dimen/_11ssp" />
                        <com.example.sew.views.TitleTextViewType6
                            android:id="@+id/txtDefaultTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Anuj Agrawal"
                            android:textColor="@color/md_grey_1200"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                </LinearLayout>
                <com.example.sew.views.CommonImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector_arrow_right"
                    android:layout_gravity="center"
                    android:tint="?appIconColor"
                    app:rotateForRtl="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"/>
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swDarkTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:checked="false"
                    android:visibility="gone"
                    android:theme="@style/SwitchCompatTheme"
                    tools:text="Switch" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="?appDividerColor"
                android:padding="2sp" />

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtNewsletterTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_22sdp"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/md_grey_1400"
                android:textStyle="bold"
                android:textSize="@dimen/_11ssp"
                tools:text="NewsLetter" />
            <LinearLayout
                android:id="@+id/layRekhtaNewletters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">



                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtNewsletterSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        tools:text="Receive Rekhta newsletter?" />

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtNewsletterDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/md_grey_1200"
                        android:textSize="@dimen/_11ssp"
                        tools:text="The latest from Rekhta delivered to your inbox" />
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swNewsLetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:buttonTint="@color/btn_login"
                    android:checked="true"
                    android:theme="@style/SwitchCompatTheme"
                    tools:text="Switch" />
            </LinearLayout>

            <View
                android:id="@+id/viewNewLetter"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="?appDividerColor"
                android:padding="2sp" />

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/md_grey_1400"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                android:text="" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp">

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtCurrentVersionHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="?primaryTextColor"
                    android:textSize="@dimen/_14ssp"
                    android:text="" />

                <TextView
                    android:id="@+id/txtCurrentVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/md_grey_1200"
                    android:textSize="@dimen/_11ssp"
                    tools:text="" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layAppUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_22sdp">
                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtNewVersion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="?primaryTextColor"
                    android:textSize="@dimen/_14ssp"
                    android:text="New update available" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_green_color"
                    android:padding="@dimen/_10sdp">
                    <com.example.sew.views.TitleTextViewType6
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UPDATE NOW"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

