<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetList_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?appBackgroundColor"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtFeaturedVideoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?appBackgroundColor"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_46sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:textColor="?primaryTextColor"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            tools:text="Feature Video" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?appBackgroundColor"
            android:paddingStart="@dimen/_3sdp"
            android:paddingEnd="@dimen/_3sdp">

            <LinearLayout
                android:id="@+id/viewHo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_3sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/poets_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_4sdp">
                <RelativeLayout
                    android:id="@+id/layVideoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?appBackgroundColor">
                    <ImageView
                        android:id="@+id/imgVideoImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shayari_image_placeholder" />
                    <com.example.sew.views.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/_100ssp"
                        android:textColor="@color/white"
                        android:text="@string/rico_videothumbplay"/>
                </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_9sdp"
                    android:layout_below="@+id/viewHo"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.example.sew.views.TitleTextViewType6
                            android:id="@+id/txtVideoName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?appBackgroundColor"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="?primaryTextColor"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            tools:text="Feature Video" />

                        <com.example.sew.views.TitleTextViewType6
                            android:id="@+id/txtVideoSubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?appBackgroundColor"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="?primaryTextColor"
                            app:textSizeEn="@dimen/_10ssp"
                            app:textSizeHi="@dimen/_12ssp"
                            app:textSizeUr="@dimen/_14ssp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:textAllCaps="true"
                            android:textStyle="normal"
                            tools:text="Feature Video" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgShare"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:tint="?appIconColor"
                        android:layoutDirection="ltr"
                        app:srcCompat="@drawable/ic_share" />


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>