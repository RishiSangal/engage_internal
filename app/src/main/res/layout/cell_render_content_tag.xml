<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?appBackgroundColor"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/layTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_effect_capsule_render_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtTagName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textColor="@drawable/text_color_rendercontent_tag"
                app:textSizeEn="@dimen/_10sdp"
                app:textSizeHi="@dimen/_12sdp"
                app:textSizeUr="@dimen/_12sdp"
                tools:text="aah" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>