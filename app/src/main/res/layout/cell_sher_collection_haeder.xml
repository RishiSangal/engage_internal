<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?appBackgroundColor"
    android:gravity="start"
    android:orientation="vertical">

    <com.example.sew.views.TitleTextViewType5
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:textAllCaps="true"
        android:textColor="?primaryTextColor"
        android:textSize="@dimen/_40ssp"
        android:textStyle="normal"
        tools:text="MOST FAMOUS" />
    <com.example.sew.views.TitleTextViewType5
        android:id="@+id/txtSherTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:textAllCaps="true"
        android:visibility="visible"
        android:textColor="?primaryTextColor"
        android:textSize="@dimen/_40ssp"
        android:textStyle="normal"
        tools:text="MOST FAMOUS" />
    <View
        android:id="@+id/viewHeaderSection"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="?appDividerColor" />

    <ImageView
        android:id="@+id/imgOccasionImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_270sdp"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:visibility="gone">
        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtContentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="SHER"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:textColor="?primaryTextColor"
            android:letterSpacing=".2"/>
        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="67"
            android:textColor="?greyTextColor"
            android:textSize="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_8sdp"/>
    </LinearLayout>
</LinearLayout>