<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?appBackgroundColor"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/poets_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        app:cardCornerRadius="@dimen/_4sdp">
    <com.example.sew.views.SquareImageView
        android:id="@+id/imgCollectionImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal">

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="?primaryTextColor"
            android:textSize="@dimen/_14ssp"
            tools:text="Top 20 sher" />
        <com.example.sew.views.IconTextView
            android:id="@+id/txtMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:text="@string/rico_more"
            android:textColor="?appIconColor"
            android:rotation="90"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_20ssp" />
<!--        <ImageView-->
<!--            android:id="@+id/imgOptions"-->
<!--            android:layout_width="@dimen/_30sdp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:background="@drawable/touch_effect"-->
<!--            android:scaleType="centerInside"-->
<!--            android:src="@drawable/ic_dots_vertical_grey600_24dp" />-->

    </LinearLayout>
</LinearLayout>