<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".module.VideoActivity">

    <include
        android:id="@+id/layHeaderTopicQuiz"
        layout="@layout/common_tool"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16">

            <TextView
                style="@style/HeadlineH6LightLeftBold2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test your knowledge"
                tools:text="Test your knowledge"
                android:layout_marginTop="@dimen/margin_16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/color_on_surface_primary_text"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="8sp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:text="What should you use to clean your hearing aids? "
                tools:text="What should you use to clean your hearing aids?"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:background="@drawable/transparency"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boarder_erro"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textSize="24sp"
                        android:textColor="@color/color_on_surface_primary_text"
                        android:letterSpacing="0.01"
                        android:text="Alcohol swabs"
                        android:lineSpacingExtra="0sp"
                        tools:text="Alcohol swabs"
                        android:padding="21dp"
                        android:drawableRight="@drawable/quiz_wrong"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textSize="24sp"
                        android:textColor="@color/color_on_surface_primary_text"
                        android:letterSpacing="0.01"
                        android:text="Water"
                        android:lineSpacingExtra="0sp"
                        tools:text="Water"
                        android:padding="21dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boarder_blue"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textSize="24sp"
                        android:textColor="@color/color_on_surface_primary_text"
                        android:letterSpacing="0.01"
                        android:text="Toothbrush or small, soft brush"
                        android:lineSpacingExtra="0sp"
                        tools:text="Toothbrush or small, soft brush"
                        android:padding="21dp"
                        android:drawableRight="@drawable/quiz_correct_blue"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textStyle="italic"
                android:textSize="20sp"
                android:textColor="@color/color_on_surface_secondary_text"
                android:letterSpacing="0.01"
                android:text="Incorrect."
                android:lineSpacingExtra="4sp"
                tools:text="Incorrect."
                android:layout_marginTop="@dimen/margin_24dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="14sp"
                android:text="@string/incorrect"
                android:textColor="@color/color_on_surface_secondary_text"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="6sp"
                android:layout_marginTop="@dimen/margin_8dp"
                tools:text="@string/incorrect"
                />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layBottomItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGotIt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/got_it"
            android:layout_marginLeft="@dimen/margin_75dp"
            android:layout_marginRight="@dimen/margin_75dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:padding="@dimen/margin_10dp"
            android:textAllCaps="false"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:background="@drawable/blue_button_round"
            android:backgroundTint="@color/color_primary"
            />
<!--        <TextView-->
<!--            android:id="@+id/btnGotIt"-->
<!--            style="@style/ButtonStyle"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="15dp"-->
<!--            android:layout_marginEnd="15dp"-->
<!--            android:text="@string/got_it"-->
<!--            android:textAllCaps="false"-->
<!--            android:textColor="@color/white" />-->
    </LinearLayout>
</LinearLayout>