<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layCritiqueMode"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_10sdp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_critique_kitkat"
            android:tint="@color/white" />

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/footerCrcitcOnText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_toStartOf="@+id/imgCritiqueOff"
            android:layout_toEndOf="@+id/imageView2"
            android:gravity="center_vertical"
            android:text="CRITIQUE MODE ON"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/imgCritiqueOff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/_10sdp"
            app:textSizeEn="@dimen/_11ssp"
            app:textSizeHi="@dimen/_13ssp"
            app:textSizeUr="@dimen/_11ssp"
            android:gravity="center"
            android:text="TURN OFF"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_51sdp"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?appDividerColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:weightSum="7"
            android:background="?appDividerColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCritiqueClose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="?appBackgroundColor"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_close_kitkat"
                android:tint="?appIconColor" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">


                <ImageView
                    android:id="@+id/imgCritiqueInfo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?appBackgroundColor"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:src="@drawable/ic_critique_kitkat"
                    android:tint="?appIconColor" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?appBackgroundColor" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?appBackgroundColor" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?appBackgroundColor" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">


                <ImageView
                    android:id="@+id/imgCritiqueShare"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?appBackgroundColor"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:src="@drawable/ic_share_kitkat"
                    android:tint="?appIconColor" />
                <LinearLayout
                    android:id="@+id/layFav"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="?appBackgroundColor"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imgCritiqueFav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?appBackgroundColor"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/ic_favourite_kitkat"
                        android:tint="?appIconColor" />
                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtFavoriteCritiqueCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="922"
                        android:textSize="@dimen/_10ssp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>