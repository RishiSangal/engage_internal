<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?appBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/_12sdp">
        <androidx.cardview.widget.CardView
            android:id="@+id/poets_image"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_margin="@dimen/_1sdp"
            android:elevation="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_4sdp">

            <com.example.sew.views.SquareImageView
                android:id="@+id/imgCollectionImage"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtCollectionTitle"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="?primaryTextColor"
            app:textSizeEn="@dimen/_12ssp"
            app:textSizeHi="@dimen/_12ssp"
            app:textSizeUr="@dimen/_14ssp"
            tools:text="Top 20 sher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFavorite"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_margin="@dimen/_1sdp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/ic_favourite_kitkat"
                android:tint="?appIconColor" />

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtFavoriteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="?greyTextColor"
                android:textSize="@dimen/_10ssp"
                tools:text="200" />

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_margin="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/ic_share_kitkat"
                android:tint="?appIconColor" />

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtShareCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="?greyTextColor"
                android:textSize="@dimen/_10ssp"
                tools:text="300" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>