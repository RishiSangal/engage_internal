<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_6sdp"
    android:background="?appBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingEnd="@dimen/_12sdp">
        <androidx.cardview.widget.CardView
            android:id="@+id/poets_image"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_4sdp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgVideoImage"
                    android:layout_width="@dimen/_120sdp"
                    android:scaleType="centerCrop"
                    android:layout_height="@dimen/_120sdp"
                    android:src="@drawable/icon" />
                <com.example.sew.views.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/_64ssp"
                    android:textColor="@color/white"
                    android:text="@string/rico_videothumbplay"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtVideoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="?appBackgroundColor"
            android:textColor="?primaryTextColor"
            android:textSize="@dimen/_12ssp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="normal"
            tools:text="Feature Video" />
    </LinearLayout>
</LinearLayout>