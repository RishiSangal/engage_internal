<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layContentUnavailable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="?appBackgroundColor"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="?appBackgroundColor"
        android:orientation="vertical">


        <com.example.sew.views.TitleTextView
            android:id="@+id/txtContentNotAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="?primaryTextColor"
            tools:text="Content not available" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEnglishLanguage"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#00aaff"
                android:foreground="?attr/selectableItemBackground"
                android:text="ROMAN"
                android:textColor="@color/white" />

            <com.example.sew.views.TitleTextView
                android:id="@+id/txtAnd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="?primaryTextColor"
                android:text="And" />

            <Button
                android:id="@+id/btnUrduLanguage"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#00aaff"
                android:foreground="?attr/selectableItemBackground"
                android:text="اردو"
                android:textColor="@color/white" />

            <com.example.sew.views.TitleTextView
                android:id="@+id/txtAnd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="?primaryTextColor"
                android:text="And" />

            <Button
                android:id="@+id/btnHindiLanguage"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#00aaff"
                android:foreground="?attr/selectableItemBackground"
                android:text="हिंदी"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>