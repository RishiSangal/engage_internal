<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_18ssp"
        android:layout_marginTop="@dimen/_20ssp">
        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtNotificationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image Shayri"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="?darkGreyTextColor"
            android:textSize="@dimen/_10ssp"/>
        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtNotificationTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="18 hrs ago"
            android:textStyle="normal"
            android:textColor="?greyTextColor"
            android:textAllCaps="true"
            android:gravity="end"
            android:textSize="@dimen/_10ssp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_12sdp">
        <ImageView
            android:id="@+id/imgReadImage"
            android:layout_width="@dimen/_6sdp"
            android:layout_height="@dimen/_6sdp"
            android:src="@drawable/count_bubble"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/imgShayriImage"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/icon"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_gravity="center"/>
        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur aneid piscing elit. In aliquam convallis sapien"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="?primaryTextColor"
            android:textSize="@dimen/_14ssp"/>
    </LinearLayout>
</LinearLayout>