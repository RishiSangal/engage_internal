<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetList_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_effect"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/_3sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_3sdp">

        <com.example.sew.views.TitleTextViewType12
            android:id="@+id/translatedtextsher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="fill_horizontal|center_vertical"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="6sp"
            android:textAlignment="center"
            android:textColor="?darkGreyTextColor"
            app:textSizeEn="@dimen/_12ssp"
            app:textSizeHi="@dimen/_12ssp"
            app:textSizeUr="@dimen/_18ssp"
            android:textStyle="italic"
            android:visibility="visible"
            tools:text="My name is Binod My na me is By name is Binod "
            tools:ignore="RtlCompat" />
        <com.example.sew.views.TitleTextViewType12
            android:id="@+id/translatedSecondtextsher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="fill_horizontal|center_vertical"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="6sp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textColor="?darkGreyTextColor"
            app:textSizeEn="@dimen/_12ssp"
            app:textSizeHi="@dimen/_12ssp"
            app:textSizeUr="@dimen/_18ssp"
            android:visibility="visible"
            tools:text="My name is Binod My na me is By name is Binod"
            tools:ignore="RtlCompat" />
        <com.example.sew.views.TitleTextViewType2
            android:id="@+id/sher_poet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:textAllCaps="true"
            android:textColor="@color/dark_blue"
            app:textSizeEn="@dimen/_10ssp"
            app:textSizeHi="@dimen/_10ssp"
            app:textSizeUr="@dimen/_14ssp"
            android:visibility="visible"
            android:textStyle="bold"
            tools:text="FIROq gorakhpuri" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sher_heartIcon"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_favourite_kitkat"
                    android:tint="?appIconColor" />

                <ImageView
                    android:id="@+id/sher_shareIcon"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:src="@drawable/ic_share_kitkat"
                    android:tint="?appIconColor" />

                <ImageView
                    android:id="@+id/sher_clipbordIcon"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="5dp"
                    android:src="@drawable/ic_copy_kitkat"
                    android:tint="?appIconColor"  />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="@color/md_grey_400"
        android:visibility="visible" />
</LinearLayout>