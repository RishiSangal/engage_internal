<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".module.VideoActivity">

    <include
        android:id="@+id/layDemo_Header"
        layout="@layout/common_tool"/>


    <ImageView
        android:id="@+id/imgTopicHeader"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:src="@drawable/ear_bud"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <TextView
            style="@style/HeadlineH6LightLeftBold2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to clean your hearing aids"
            tools:text="How to clean your hearing aids"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_marginTop="@dimen/margin_24dp"
            android:textStyle="normal"
            android:textSize="16sp"
            android:text="Learn how to clean and care for the basic components of your hearing aids to ensure optimal performance over time."
            android:textColor="@color/color_on_surface_primary_text"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8sp"
            tools:text="Learn how to clean and care for the basic components of your hearing aids to ensure optimal performance over time."
            />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>

</LinearLayout>