<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layAudioPlayerParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:cardBackgroundColor="?popupBackgroundColor"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layAudioLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/layAudioPlayerContainer"
            android:layout_alignTop="@+id/layAudioPlayerContainer"
            android:layout_alignEnd="@+id/layAudioPlayerContainer"
            android:layout_alignBottom="@+id/layAudioPlayerContainer"
            android:background="?popupBackgroundColor"
            android:gravity="center">

            <include layout="@layout/cell_list_loading" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layAudioPlayerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/closePlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_2sdp"
                android:visibility="visible"
                android:tint="?appIconColor"
                app:srcCompat="@drawable/ic_close" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layProgressTimer"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layoutDirection="ltr"
                    android:weightSum="3">
                   <!-- android:background="@drawable/audio_player_touch-->
                    <ImageView
                        android:id="@+id/poetDetailBkdBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?popupBackgroundColor"
                        android:padding="@dimen/_8sdp"
                        android:tint="?primaryTextColor"
                        app:srcCompat="@drawable/ic_backward" />

                    <ImageView
                        android:id="@+id/poetDetailPlayBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?popupBackgroundColor"
                        android:padding="@dimen/_8sdp"
                        android:tint="?primaryTextColor"
                        app:srcCompat="@drawable/ic_play_vector" />

                    <ImageView
                        android:id="@+id/poetDetailFwdBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?popupBackgroundColor"
                        android:padding="8sp"
                        android:tint="?primaryTextColor"
                        app:srcCompat="@drawable/ic_forward" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layProgressTimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progessSeekBar"
                    android:layoutDirection="ltr"
                    android:padding="@dimen/_3sdp">

                    <com.example.sew.views.TitleTextView
                        android:id="@+id/remiainTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/colorPrimary"
                        tools:text="00:00" />

                    <com.example.sew.views.TitleTextView
                        android:id="@+id/totalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/colorPrimary"
                        tools:text="00:00" />
                </RelativeLayout>

                <SeekBar
                    android:id="@+id/progessSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/audioTitle"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:mirrorForRtl="false"
                    android:progressTint="?primaryTextColor"
                    android:thumbTint="@color/colorPrimary" />


                <com.example.sew.views.TitleTextView
                    android:id="@+id/audioTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?primaryTextColor"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="visible"
                    tools:text=" AUDIO TITLE " />


            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>