<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?appBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?appBackgroundColor"
        android:orientation="vertical"
        android:paddingStart="@dimen/_16sdp"
        android:paddingTop="@dimen/_23sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:paddingBottom="@dimen/_23sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp">

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:textColor="?primaryTextColor"
            android:textSize="@dimen/_14ssp"
            tools:text="Showing Result For : " />
    </LinearLayout>

    <com.example.sew.views.TitleTextViewType6
        android:id="@+id/txtDictionaryMatchesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="12sp"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:textAllCaps="true"
        android:textColor="?primaryTextColor"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        tools:text="Dictionary matches" />
</LinearLayout>