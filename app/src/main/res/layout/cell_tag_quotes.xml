<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetList_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_effect"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:paddingTop="@dimen/_16sdp">

        <LinearLayout
            android:id="@+id/laySher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/translatedtextsher"
            style="@style/MerriweatherLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginTop="14sp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="fill_horizontal|center_vertical"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="6sp"
            android:textAlignment="center"
            android:textColor="?greyTextColor"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="My name is Binod My na me is By name is Binod My name is Binod" />

        <com.example.sew.views.TitleTextViewType12
            android:id="@+id/sher_poet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="5sp"
            android:paddingBottom="6dp"
            android:textAllCaps="true"
            android:textColor="@color/dark_blue"
            app:textSizeEn="@dimen/_10sdp"
            app:textSizeHi="@dimen/_12sdp"
            app:textSizeUr="@dimen/_10sdp"
            android:visibility="visible"
            tools:text="FIROq gorakhpuri" />

        <LinearLayout
            android:id="@+id/layBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sher_heartIcon"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_favourite_kitkat"
                    android:tint="?appIconColor" />

                <ImageView
                    android:id="@+id/sher_shareIcon"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/ic_share_kitkat"
                    android:tint="?appIconColor" />

                <ImageView
                    android:id="@+id/sher_clipbordIcon"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:padding="5dp"
                    android:src="@drawable/ic_copy_kitkat"
                    android:tint="?appIconColor" />

                <ImageView
                    android:id="@+id/sher_ghazalIcon"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:src="@drawable/ic_glas"
                    android:tint="?appIconColor"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/sher_translateIcon"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:adjustViewBounds="true"
                    android:tint="?appIconColor"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_translate" />
                <ImageView
                    android:id="@+id/imgCritiqueInfo"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    android:src="@drawable/ic_critique_kitkat"
                    android:tint="?appIconColor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tagContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|end"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:src="@drawable/ic_tag_kitkat"
                        android:tint="#ff9900" />

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtTagsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="normal"
                        tools:text="See Ghazal sdl" />
                </LinearLayout>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/sherTagIcon"
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toStartOf="@+id/sherFirstTagView"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_tag_kitkat"
                    android:backgroundTint="#ff9900" />

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/sherFirstTagView"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toStartOf="@+id/shersandText"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="gone"
                    tools:text="No tags"
                    android:textStyle="normal"/>

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/shersandText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="3dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_toStartOf="@+id/shermoreTagView"
                    android:fontFamily="sans-serif"
                    android:textColor="?appBackgroundColor"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="normal"
                    tools:text="and" />

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/shermoreTagView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:layout_marginLeft="9dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:textStyle="normal"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_12ssp"
                    tools:text="5 more" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_19sdp"
        android:background="?appDividerColor"
        android:layout_marginBottom="@dimen/_8sdp"
        android:visibility="visible" />
</LinearLayout>