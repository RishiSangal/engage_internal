<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="12dp"
    android:paddingBottom="12dp"
    android:background="@drawable/touch_effect"
    app:layout_flexBasisPercent="50%">

    <LinearLayout
        android:id="@+id/layTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/square_btn_grey_bg"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewTagColor"
            android:layout_width="@dimen/_3sdp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/square_btn_grey_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtTagName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textColor="?primaryTextColor"
                android:textSize="@dimen/_14ssp"
                tools:text="aah"
                android:textStyle="bold"/>

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtSherCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?greyTextColor"
                android:paddingTop="@dimen/_10sdp"
                android:gravity="center"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_13ssp"
                tools:text="11" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>