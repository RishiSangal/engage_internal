<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="?appBackgroundColor"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?appBackgroundColor"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_320sdp">

                <com.example.sew.views.SquareImageView
                    android:id="@+id/poetProfilePoetImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/poetProfilePoetImg"
                    android:layout_alignBottom="@id/poetProfilePoetImg"
                    android:background="@drawable/shadow_toolbar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.example.sew.views.TitleTextViewType5
                            android:id="@+id/txtPoetName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="-10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_40ssp"
                            tools:text="FAIZ " />
                        <ImageView
                            android:id="@+id/imgFavorite"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:tint="?primaryTextColor"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:layout_marginEnd="@dimen/_16sdp"
                            app:srcCompat="@drawable/ic_favorite" />
                        <ImageView
                            android:id="@+id/imgShareUrl"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:tint="@color/white"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:layout_marginEnd="@dimen/_16sdp"
                            app:srcCompat="@drawable/ic_share" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <com.example.sew.views.TitleTextViewType6
                            android:id="@+id/txtPoetTenure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14ssp"
                            tools:text="1971 - 1847 " />

                        <com.example.sew.views.TitleTextViewType6
                            android:id="@+id/divider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14ssp"
                            android:visibility="gone"
                            tools:text="|" />

                        <com.example.sew.views.TitleTextViewType6
                            android:id="@+id/txtPoetPlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textColor="@color/white"
                            android:visibility="gone"
                            app:textSizeEn="@dimen/_14ssp"
                            app:textSizeHi="@dimen/_14ssp"
                            app:textSizeUr="@dimen/_16ssp"
                            tools:text="Agra, Delhi" />
                    </LinearLayout>

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtOneLinearDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:lineSpacingMultiplier="1.2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        tools:text="one linear" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layPoetShortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="?appBackgroundColor"
                android:orientation="vertical">

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtPoetBioTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_34sdp"
                    android:includeFontPadding="false"
                    android:textColor="?primaryTextColor"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    tools:text="BIOGRAPHY" />

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtPoetShortDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_23sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_32sdp"
                    android:textColor="?primaryTextColor"
                    android:textSize="@dimen/_14ssp"
                    tools:text="@string/lore" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layPoetDetailsPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_12ssp"
                android:paddingEnd="@dimen/_12ssp" />

            <LinearLayout
                android:id="@+id/layPoetSherContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_44sdp">

                <com.example.sew.views.CommonImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_17sdp"
                    android:src="@drawable/quote_open"
                    android:tint="#E6E6E6"
                    app:rotateForRtl="true" />
                <LinearLayout
                    android:id="@+id/layPoetSherPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_19ssp"
                    android:layout_marginEnd="@dimen/_19ssp"
                    android:orientation="vertical" />
                <com.example.sew.views.CommonImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_17sdp"
                    android:src="@drawable/quote_close"
                    android:tint="#E6E6E6"
                    android:layout_gravity="end"
                    app:rotateForRtl="true" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/laySeeFullGhazal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtSeeFullGhazal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_32sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:textSizeEn="@dimen/_12ssp"
                    app:textSizeHi="@dimen/_12ssp"
                    app:textSizeUr="@dimen/_14ssp"
                    tools:text="View all Ghazals" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@color/blue"
                    android:gravity="center" />

            </LinearLayout>

            <WebView
                android:id="@+id/wvPoetDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtPoetDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_45sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:lineSpacingMultiplier="1.5"
                android:textColor="?primaryTextColor"
                android:textSize="@dimen/_16ssp"
                tools:text="@string/lore" />

            <com.example.sew.views.TitleTextView
                android:id="@+id/txtReadMoreBio"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/blue"
                android:visibility="gone"
                tools:text="Read More" />

            <LinearLayout
                android:id="@+id/layContentUnavailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnEnglishLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/blue"
                    android:text="ROMAN"
                    android:foreground="?attr/selectableItemBackground"
                    android:textColor="@color/white" />

                <com.example.sew.views.TitleTextView
                    android:id="@+id/txtAnd1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="And" />

                <Button
                    android:id="@+id/btnUrduLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/blue"
                    android:text="اردو"
                    android:foreground="?attr/selectableItemBackground"
                    android:textColor="@color/white" />

                <com.example.sew.views.TitleTextView
                    android:id="@+id/txtAnd2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="And" />

                <Button
                    android:id="@+id/btnHindiLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/blue"
                    android:text="हिंदी"
                    android:foreground="?attr/selectableItemBackground"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layUsefulLinks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_23sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@color/colorPrimary" />

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtUsefulLinksTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_7ssp"
                        android:ellipsize="end"
                        android:lineSpacingExtra=".2dp"
                        android:maxLines="2"
                        android:text="Useful Links"
                        android:textAllCaps="true"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/layUsefulLinksPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:alignContent="stretch"
                    app:alignItems="stretch"
                    app:flexWrap="wrap" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>