<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetList_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?appThirdBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtTrendingSherTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?appBackgroundColor"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_46sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_24sdp"
            android:textColor="?primaryTextColor"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            tools:text="Trending Sher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/_1sdp">
            <com.example.sew.views.CustomViewPager
                android:id="@+id/pagerTrendingSher"
                android:layout_width="match_parent"
                android:paddingStart="@dimen/_14sdp"
                android:paddingEnd="@dimen/_14sdp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_180sdp"/>
            <LinearLayout
                android:id="@+id/laySher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingStart="@dimen/_14sdp"
                android:paddingEnd="@dimen/_14sdp" />

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/sher_poet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingTop="5sp"
                android:textStyle="bold"

                android:textColor="@color/blue"
                android:textSize="@dimen/_14ssp"
                android:visibility="gone"
                tools:text="FIROq gorakhpuri" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:visibility="gone"
                app:alignContent="stretch"
                app:alignItems="stretch"
                app:flexWrap="wrap" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="?appDividerColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sher_ghazalIcon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/touch_effect_home_today"
                        android:src="@drawable/ic_glas"
                        android:tint="?appIconColor"
                        android:visibility="visible" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="?appDividerColor" />

                    <ImageView
                        android:id="@+id/sher_shareIcon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/touch_effect_home_today"
                        android:src="@drawable/ic_share_kitkat"
                        android:tint="?appIconColor" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="?appDividerColor" />

                    <ImageView
                        android:id="@+id/sher_heartIcon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/touch_effect_home_today"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_favourite_kitkat"
                        android:tint="?appIconColor" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="?appDividerColor" />

                    <com.example.sew.views.CommonImageView
                        android:id="@+id/imgPrevious"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/touch_effect_home_today"
                        android:src="@drawable/vector_arrow_left"
                        android:tint="?appIconColor"
                        app:rotateForRtl="true" />

                    <LinearLayout
                        android:id="@+id/layNext"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/blue"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.example.sew.views.TitleTextViewType6
                            android:id="@+id/txtNextTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            app:textSizeEn="@dimen/_12sdp"
                            app:textSizeHi="@dimen/_14sdp"
                            app:textSizeUr="@dimen/_14sdp"
                            android:textStyle="bold"
                            tools:text="NEXT" />

                        <com.example.sew.views.CommonImageView
                            android:id="@+id/imgNext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/vector_arrow_right"
                            android:tint="@color/white"
                            app:rotateForRtl="true" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="?appDividerColor" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>