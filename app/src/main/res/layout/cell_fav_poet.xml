<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetList_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_effect"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/offlineFavIcon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/_14sdp"
        android:tint="?appIconColor"
        app:srcCompat="@drawable/ic_favorite" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPoetImage"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_toEndOf="@+id/offlineFavIcon"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon">

    </de.hdodenhof.circleimageview.CircleImageView>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imgPoetImage"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.7"
                        android:orientation="vertical">
                        <com.example.sew.views.TitleTextViewType6
                            android:id="@+id/txtPoetName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="?darkGreyTextColor"
                            app:textSizeEn="@dimen/_14ssp"
                            app:textSizeHi="@dimen/_14ssp"
                            app:textSizeUr="@dimen/_16ssp"
                            tools:text="AAh ko chahiye t" />
                        <com.example.sew.views.TitleTextViewType6
                            android:id="@+id/ghazalTitleSecond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="?darkGreyTextColor"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:textSizeEn="@dimen/_14ssp"
                            app:textSizeHi="@dimen/_14ssp"
                            app:textSizeUr="@dimen/_16ssp"
                            tools:text="AAh ko chahiye t" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_16sdp">

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtDob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="?greyTextColor"
                        app:textSizeEn="@dimen/_9ssp"
                        app:textSizeHi="@dimen/_9ssp"
                        app:textSizeUr="@dimen/_12ssp"
                        android:layoutDirection="ltr"
                        tools:text="AAh ko chahiye t" />


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="?appDividerColor" />
</RelativeLayout>