<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetList_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_effect"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/_3sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_3sdp"
        android:paddingBottom="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/laySher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp" />

        <com.example.sew.views.TitleTextViewType2
            android:id="@+id/sher_poet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingTop="5sp"
            android:paddingBottom="6dp"
            android:textAllCaps="true"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_10ssp"
            android:visibility="gone"
            tools:text="FIROq gorakhpuri" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sher_heartIcon"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_favourite_kitkat"
                    android:tint="@color/md_grey_400" />

                <ImageView
                    android:id="@+id/sher_shareIcon"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:src="@drawable/ic_share_kitkat"
                    android:tint="@color/md_grey_400" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".8dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/md_grey_400"
        android:visibility="visible" />
</LinearLayout>