<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".module.VideoActivity">

    <include
        android:id="@+id/layTopicHeader"
        layout="@layout/common_tool"/>


    <ImageView
        android:id="@+id/imgTopicHeader"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:src="@drawable/ear_bud"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <TextView
                android:id="@+id/txtQuickHeading"
                style="@style/HeadlineH6LightLeftBold2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to clean your hearing aids"
                tools:text="How to clean your hearing aids"
                />

            <TextView
                android:id="@+id/txtQuickSubHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginTop="@dimen/margin_24dp"
                android:textStyle="normal"
                android:textSize="16sp"
                android:text="Learn how to clean and care for the basic components of your hearing aids to ensure optimal performance over time."
                android:textColor="@color/color_on_surface_primary_text"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="8sp"
                tools:text="Learn how to clean and care for the basic components of your hearing aids to ensure optimal performance over time."
                />

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStart"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:text="@string/start"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:padding="@dimen/margin_10dp"
        android:textAllCaps="false"
        android:background="@drawable/blue_button_round"
        android:backgroundTint="@color/color_primary"
        />
</LinearLayout>