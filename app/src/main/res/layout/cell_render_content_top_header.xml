<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layTopContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:background="?appBackgroundColor"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="@dimen/_88sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.example.sew.views.TitleTextViewType7
            android:id="@+id/txtHeaderContentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:includeFontPadding="false"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:textAlignment="gravity"
            android:textColor="?primaryTextColor"
            app:textSizeEn="@dimen/_20ssp"
            app:textSizeHi="@dimen/_22ssp"
            app:textSizeUr="@dimen/_24ssp"
            android:textStyle="bold"
            android:padding="@dimen/_2sdp"
            tools:text="Content Title" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="18sp"
            android:gravity="start"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <com.example.sew.views.TitleTextViewType7
                android:id="@+id/txtHeaderPoetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/dark_blue"
                app:textSizeEn="@dimen/_12ssp"
                app:textSizeHi="@dimen/_14ssp"
                app:textSizeUr="@dimen/_16ssp"
                tools:text="Poet Name" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/imgHeaderPopularChoice"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_beginner_choice_kitkat"
                android:tint="#FBB167"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imgHEaderEditorChoice"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_editors_choice_kitkat"
                android:tint="@color/dark_blue"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="?appDividerColor"
            android:layout_marginBottom="@dimen/_32sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"/>
    </LinearLayout>

</LinearLayout>