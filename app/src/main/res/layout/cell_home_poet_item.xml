<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_6sdp"
    android:background="?appBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingEnd="@dimen/_18sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/poetProfileImageTemplate"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/icon" />

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtPoetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="?primaryTextColor"
            app:textSizeEn="@dimen/_12ssp"
            app:textSizeHi="@dimen/_12ssp"
            app:textSizeUr="@dimen/_14ssp"
            tools:text="Faiz mh" />

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtPoetTenure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="?greyTextColor"
            android:textSize="@dimen/_10ssp"
            app:layout_marginTopEn="@dimen/_7ssp"
            app:layout_marginTopHi="@dimen/_3ssp"
            app:layout_marginTopUr="@dimen/_7ssp"
            android:textDirection="ltr"
            tools:text="1911 - 1984" />
    </LinearLayout>
</LinearLayout>