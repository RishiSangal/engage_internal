<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetList_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?appThirdBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtWordOfTheDayTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?appBackgroundColor"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_32sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_24sdp"
            android:textColor="?primaryTextColor"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            tools:text="Most Read Poets" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?appThirdBackground"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_28sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.example.sew.views.TitleTextViewType7
                    android:id="@+id/txtWordOfTheDayMainText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/color_pink"
                    android:textSize="@dimen/_24ssp"
                    android:textStyle="bold|italic"
                    tools:text="fardaa" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_weight="1" />

                <com.example.sew.views.CommonImageView
                    android:id="@+id/imgWordAudio"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_19sdp"
                    app:rotateForRtl="true"
                    android:tint="@color/dark_blue"
                    app:srcCompat="@drawable/ic_audio" />

                <ImageView
                    android:id="@+id/imgWordFavorite"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:tint="?appIconColor"
                    app:srcCompat="@drawable/ic_favorite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/_19sdp"
                android:orientation="horizontal">

                <com.example.sew.views.TitleTextViewType7
                    android:id="@+id/txtWordOfTheSecondaryText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|end"
                    android:textColor="?primaryTextColor"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    tools:text="Hindi Text" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginRight="@dimen/_13sdp"
                    android:text="@string/text_divider"
                    android:textAlignment="center"
                    android:textColor="@color/md_grey_300" />

                <com.example.sew.views.TitleTextViewType7
                    android:id="@+id/txtWordOfTheSecondaryText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:gravity="center_horizontal|start"
                    android:textColor="?primaryTextColor"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    tools:text="Urdu Text" />

            </LinearLayout>

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtWordMeaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                android:textColor="?primaryTextColor"
                android:textSize="@dimen/_14ssp"
                tools:text="Means" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/laySher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"/>
        <com.example.sew.views.TitleTextViewType11
            android:id="@+id/txtFromAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_17sdp"
            android:layout_marginEnd="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center"
            android:textStyle="italic"
            android:textColor="?primaryTextColor"
            android:textSize="@dimen/_12ssp"
            tools:text="Ghazal by" />
        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_60sdp"
            android:visibility="gone"
            android:background="@color/md_grey_400" />


        <com.example.sew.views.TitleTextViewType11
            android:id="@+id/txtDictionaryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:textColor="@color/black"
            app:textSizeEn="@dimen/_14ssp"
            app:textSizeHi="@dimen/_14ssp"
            app:textSizeUr="@dimen/_16ssp"
            android:visibility="gone"
            android:textStyle="bold"
            tools:text="Dictionary" />

        <LinearLayout
            android:id="@+id/laySearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/textlayouthint"
            android:gravity="center_vertical">

            <com.example.sew.views.CommonImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:rotateForRtl="false"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_searchtab" />

            <com.example.sew.views.CustomAutoCompleteTextView
                android:id="@+id/edSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:drawableStart="@drawable/ic_searchtab"
                android:layout_weight="1"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:minHeight="@dimen/_40sdp"
                android:padding="@dimen/_10sdp"
                android:textColorHint="@color/hint_color"
                android:textColor="?primaryTextColor"
                android:singleLine="true"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtOtherWordsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_16sdp"
            android:paddingTop="@dimen/_24sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:textColor="?primaryTextColor"
            android:textSize="@dimen/_12ssp"
            tools:text="Other Popular Words" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexOtherWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_23sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_15sdp"
            app:alignContent="stretch"
            app:alignItems="stretch"
            app:flexWrap="wrap" />
    </LinearLayout>
</LinearLayout>