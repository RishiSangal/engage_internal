<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#282828"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/brightnes" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:orientation="vertical">

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtTryNewDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Try the new Dark Mode"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtSettingInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="Go to More > Settings >  App Theme to change this setting anytime you like"
                android:textColor="@color/icon_color"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_24sdp"
                android:gravity="end">

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtDissmiss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dismiss"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"/>
                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtTurnOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turn On"
                    android:ems="5"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:background="@drawable/blue_bg"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>