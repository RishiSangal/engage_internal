<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?appBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?appBackgroundColor"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_22sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/poetProfileImageTemplate"
                android:layout_width="@dimen/_96sdp"
                android:layout_height="@dimen/_96sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/poetProfileImageTemplate">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.example.sew.views.TitleTextViewType5
                        android:id="@+id/poetNameTemplateTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_17sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/poetProfileImageTemplate"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="FAIZ AHMAAD FAIZ Ahmad SUZUKI"
                        android:textAllCaps="true"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_24ssp" />
                    <ImageView
                        android:id="@+id/imgFavorite"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:tint="?appIconColor"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:layout_marginEnd="@dimen/_16sdp"
                        app:srcCompat="@drawable/ic_favorite" />
                    <ImageView
                        android:id="@+id/imgShareUrl"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:tint="?appIconColor"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_share" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/poetNameTemplateTV"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/poetTenureTemplateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8sp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:text="1911 - 1984"
                        android:textColor="?greyTextColor"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/poetTenureTemplateDivider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8sp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:textColor="?appDividerColor"
                        android:text="|" />

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/poetBirthPlaceTemplate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="5sp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:textColor="?greyTextColor"
                        android:text="Lahore Pakistan"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!--<org.Rekhta.views.JustifyCustomTextView-->
        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/poetDescriptionTemplate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="?appBackgroundColor"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/_4sdp"
            android:maxLines="10"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:text="One of the most celebrated and popular poets. Faced political repression for h most celebrated and popular poets. Faced political repression for his revoloutionary views."
            android:textColor="?primaryTextColor"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="1dp"
        android:layout_marginBottom="32sp"
        android:layout_marginEnd="8sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="22sp"
        android:visibility="gone"
        android:background="?appDividerColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?appBackgroundColor"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp">

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/poetTypeOfScreenTemplate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:paddingEnd="@dimen/_3sdp"
            android:text="Ghazals"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="?primaryTextColor"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/poetCountTemplate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="89"
            android:textColor="?greyTextColor"
            android:textAllCaps="true"
            android:textSize="@dimen/_12ssp" />

        <com.example.sew.views.IconTextView
            android:id="@+id/txtFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rico_controls"
            android:textColor="@color/dark_blue"
            android:layout_gravity="end"
            android:textSize="@dimen/_30ssp" />
    </LinearLayout>

</LinearLayout>