<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetList_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_effect"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="ContentDescription">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_16sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPoetProfile"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.sew.views.TitleTextViewType10
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?darkGreyTextColor"
                    app:textSizeEn="@dimen/_14ssp"
                    app:textSizeHi="@dimen/_14ssp"
                    app:textSizeUr="@dimen/_16ssp"
                    tools:text="AAh ko chahiye t" />

                <com.example.sew.views.TitleTextViewType10
                    android:id="@+id/txtSher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="?greyTextColor"
                    app:textSizeEn="@dimen/_14ssp"
                    app:textSizeHi="@dimen/_14ssp"
                    app:textSizeUr="@dimen/_16ssp"
                    android:textStyle="italic"
                    tools:text="AAh ko chahiye t" />

                <com.example.sew.views.TitleTextViewType10
                    android:id="@+id/txtPoetName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:ellipsize="end"
                    app:textAllCaps="true"
                    android:textColor="?primaryTextColor"
                    app:textSizeEn="@dimen/_10ssp"
                    app:textSizeHi="@dimen/_12ssp"
                    app:textSizeUr="@dimen/_14ssp"
                    tools:text="AAh ko chahiye t" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgFavorite"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="@dimen/_3sdp"
                        android:tint="?appIconColor"
                        app:srcCompat="@drawable/ic_favorite" />

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtLikeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_13sdp"
                        android:textSize="@dimen/_10ssp"
                        android:layout_gravity="center"
                        android:textColor="?appIconColor"
                        android:layout_marginStart="@dimen/_1sdp"
                        tools:text="24" />
                    <ImageView
                        android:id="@+id/imgShare"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_5sdp"
                        android:visibility="gone"
                        android:tint="?appIconColor"
                        app:srcCompat="@drawable/ic_share" />

                    <com.example.sew.views.TitleTextViewType2
                        android:id="@+id/txtShareCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:textColor="?appIconColor"
                        tools:text="24" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/layDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="?appDividerColor"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:visibility="visible" />
</LinearLayout>