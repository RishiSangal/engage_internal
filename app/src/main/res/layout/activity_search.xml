<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchActivity_mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?appBackgroundColor"
    android:orientation="vertical">


    <include
        android:id="@+id/header"
        layout="@layout/header_type_1" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/header"
        android:background="?appDividerColor" />


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_above="@+id/relBottombar">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?appThirdBackground">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?appThirdBackground"
                    android:visibility="visible"
                    app:layout_collapseMode="pin"
                    android:orientation="vertical">

                    <com.example.sew.views.TitleTextViewType11
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_17ssp"
                        android:layout_marginTop="@dimen/_32sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:textColor="?primaryTextColor"
                        app:textSizeEn="@dimen/_36ssp"
                        app:textSizeHi="@dimen/_36ssp"
                        app:textSizeUr="@dimen/_30ssp"
                        android:textStyle="bold"
                        tools:text="Search" />

                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_anchorGravity="bottom"
                android:background="?appThirdBackground">

                <RelativeLayout
                    android:id="@+id/search_lay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_23sdp"
                    android:background="@drawable/textlayouthint"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.example.sew.views.CustomAutoCompleteTextView
                        android:id="@+id/edSearch"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@null"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="Search"
                        android:textSize="@dimen/_14ssp"
                        android:imeOptions="actionSearch"
                        android:minHeight="@dimen/_40sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_60sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textColorHint="@color/hint_color"
                        android:textColor="?darkGreyTextColor"
                        android:singleLine="true" />

                    <!--<EditText-->
                    <!--android:id="@+id/edSearch"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:layout_weight="1.44"-->
                    <!--android:background="#00000000"-->
                    <!--android:clickable="true"-->
                    <!--android:focusable="true"-->
                    <!--android:focusableInTouchMode="true"-->
                    <!--android:gravity="start"-->
                    <!--android:hint="Search"-->
                    <!--android:imeOptions="actionSearch"-->
                    <!--android:inputType="text"-->
                    <!--android:paddingStart="@dimen/_6sdp"-->
                    <!--android:paddingEnd="@dimen/_6sdp"-->
                    <!--android:textAlignment="viewStart"-->
                    <!--android:visibility="gone" />-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/clear_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="25sp"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:src="@drawable/ic_cancel"
                            android:tint="?appIconColor"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/mic_btn"
                            android:layout_width="0dp"
                            android:layout_height="22sp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".2"
                            android:tint="?appIconColor"
                            android:src="@drawable/ic_mic" />
                    </LinearLayout>


                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24sdp"
                app:layout_anchorGravity="bottom"
                android:background="?appThirdBackground"/>
<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0dp"-->
<!--                android:layout_marginTop="@dimen/_24sdp"-->
<!--                app:layout_anchorGravity="bottom"-->
<!--                android:background="?appIconColor"-->
<!--                />-->

            <LinearLayout
                android:id="@+id/laySearchContentTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_anchorGravity="bottom"
                android:visibility="visible">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="?appDividerColor" />
                <com.ogaclejapan.smarttablayout.SmartTabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:stl_customTabTextLayoutId="@layout/custom_tab_without_view"
                    app:stl_underlineThickness="0dp"
                    app:stl_customTabTextViewId="@id/custom_text"
                    app:stl_indicatorColor="@color/colorPrimary"
                    app:stl_indicatorInterpolation="linear"
                    app:stl_titleOffset="auto_center"
                    app:stl_indicatorThickness="4dp"
                    android:background="?appBackgroundColor"
                    app:stl_dividerThickness="0dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="?appDividerColor" />
            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:id="@+id/laySearchContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?appBackgroundColor"/>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/layExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layExplorePoetry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_37sdp">

                    <com.example.sew.views.TitleTextViewType12
                        android:id="@+id/txtExplorePoetryTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_24sdp"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_17sdp"
                        android:layout_marginRight="@dimen/_17sdp"
                        tools:text="Explore Poetry" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvExplorePoetry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_12sdp"
                        android:background="?appBackgroundColor"
                        android:clipToPadding="false"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layTopPoets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_37sdp">

                    <com.example.sew.views.TitleTextViewType12
                        android:id="@+id/txtTopPoetsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_24sdp"
                        android:textColor="?primaryTextColor"
                        android:layout_marginLeft="@dimen/_17sdp"
                        android:layout_marginRight="@dimen/_17sdp"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        tools:text="Explore Poetry" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTopPoets"
                        android:layout_width="match_parent"
                        android:paddingStart="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_12sdp"
                        android:clipToPadding="false"
                        android:background="?appBackgroundColor"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layExploreTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_46sdp">

                    <com.example.sew.views.TitleTextViewType12
                        android:id="@+id/txtExploreTagsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_24sdp"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_17sdp"
                        android:layout_marginRight="@dimen/_17sdp"
                        tools:text="Explore Poetry" />


                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/flexTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_17sdp"
                        android:layout_marginEnd="@dimen/_17sdp"
                        android:layoutDirection="ltr"
                        app:alignContent="stretch"
                        app:alignItems="stretch"
                        app:flexWrap="wrap" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:orientation="vertical">

                        <com.example.sew.views.TitleTextViewType12
                            android:id="@+id/txtExploreMoreTags"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/touch_effect"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:gravity="center"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/view_profile"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/dark_blue"
                            app:textSizeEn="@dimen/_10ssp"
                            app:textSizeHi="@dimen/_12ssp"
                            app:textSizeUr="@dimen/_12ssp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:background="@color/dark_blue"
                            android:gravity="center" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <!--    </LinearLayout>-->
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <RelativeLayout
        android:id="@+id/relBottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include
            layout="@layout/bottom_navigation" />
    </RelativeLayout>

</RelativeLayout>