<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_25sdp"
    android:paddingTop="@dimen/_25sdp"
    android:paddingRight="@dimen/_25sdp"
    android:paddingBottom="@dimen/_15sdp"
    android:background="?popupBackgroundColor"
    tools:ignore="ContentDescription,HardcodedText">

    <TextView
        style="@style/LatoBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Password must be"
        android:textColor="?primaryTextColor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="?appDividerColor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:tint="?appIconColor"
            android:src="@drawable/circle_black_dot" />

        <TextView
            style="@style/LatoRegular"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:text="at least 6 characters long"
            android:textColor="?greyTextColor"
            android:textSize="@dimen/_14ssp" />

        <ImageView
            android:id="@+id/pass_lengthIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/cancel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:tint="?appIconColor"
            android:src="@drawable/circle_black_dot" />

        <TextView
            style="@style/LatoRegular"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:text="at least an uppercase letter"
            android:textColor="?greyTextColor"
            android:textSize="@dimen/_14ssp" />

        <ImageView
            android:id="@+id/uppercaseIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/cancel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:tint="?appIconColor"
            android:src="@drawable/circle_black_dot"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/LatoRegular"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:text="at least a number"
            android:textColor="?greyTextColor"
            android:textSize="@dimen/_14ssp" />

        <ImageView
            android:id="@+id/numberIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dip"
            android:src="@drawable/cancel" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        style="@style/LatoBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:text="Close"
        android:textAlignment="viewEnd"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>