<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetList_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_effect"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/offlineFavIcon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:tint="?appIconColor"
        android:layout_marginStart="@dimen/_16sdp"
        app:srcCompat="@drawable/ic_favorite" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/offlineFavIcon"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_6sdp">
                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtNazamTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="?darkGreyTextColor"
                        app:textSizeEn="@dimen/_14ssp"
                        app:textSizeHi="@dimen/_14ssp"
                        app:textSizeUr="@dimen/_18ssp"
                        android:textStyle="bold"
                        tools:text="AAh ko chahiye t" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:orientation="vertical">
                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtNazamSubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="?darkGreyTextColor"
                        app:textSizeEn="@dimen/_14ssp"
                        app:textSizeHi="@dimen/_14ssp"
                        app:textSizeUr="@dimen/_16ssp"
                        tools:text="AAh ko chahiye t" />
                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtNazamSubTitleSecond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="?darkGreyTextColor"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:textSizeEn="@dimen/_14ssp"
                        app:textSizeHi="@dimen/_14ssp"
                        app:textSizeUr="@dimen/_16ssp"
                        tools:text="AAh ko chahiye t" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtAuthor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAllCaps="true"
                        android:textColor="?darkGreyTextColor"
                        app:textSizeEn="@dimen/_10ssp"
                        app:textSizeHi="@dimen/_12ssp"
                        app:textSizeUr="@dimen/_14ssp"
                        tools:text="AAh ko chahiye t" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_3sdp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end">

                            <ImageView
                                android:id="@+id/poetEditorChoiceIcon"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_gravity="center_vertical"
                                android:scaleType="fitXY"
                                android:tint="#fbb167"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_beginner_choice" />


                            <ImageView
                                android:id="@+id/poetPopularChoiceIcon"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:scaleType="fitXY"
                                android:tint="@color/dark_blue"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_editors_choice" />

                            <ImageView
                                android:id="@+id/poetaudioLink"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:scaleType="fitXY"
                                android:tint="?appIconColor"
                                app:srcCompat="@drawable/ic_volume_medium" />

                            <ImageView

                                android:id="@+id/poetyoutubeLink"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:scaleType="fitXY"
                                android:tint="?appIconColor"
                                app:srcCompat="@drawable/ic_video" />

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="?appDividerColor" />
</RelativeLayout>