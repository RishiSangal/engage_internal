<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetList_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_effect"
    android:orientation="vertical"
    android:paddingStart="@dimen/_3sdp"
    android:paddingEnd="@dimen/_3sdp"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:id="@+id/layLookingMoreTitleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?appBackgroundColor"
        android:orientation="vertical">

        <com.example.sew.views.TitleTextViewType11
            android:id="@+id/txtLookingMoreTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?appBackgroundColor"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_46sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:textColor="?primaryTextColor"
            app:textSizeEn="@dimen/_16ssp"
            app:textSizeHi="@dimen/_16ssp"
            app:textSizeUr="@dimen/_20ssp"
            android:textStyle="bold"
            tools:text="Most Read Poets" />

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtLookingMoreSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="?appBackgroundColor"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_18sdp"
            android:textColor="?primaryTextColor"
            app:textSizeEn="@dimen/_14ssp"
            app:textSizeHi="@dimen/_14ssp"
            app:textSizeUr="@dimen/_16ssp"
            android:textStyle="normal"
            tools:text="Most Read Poets" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_16sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/offlineFavIcon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:scaleType="fitXY"
            android:tint="?appIconColor"
            app:srcCompat="@drawable/ic_favorite" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:paddingBottom="@dimen/_16sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">
                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtNazamTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?primaryTextColor"
                    app:textSizeEn="@dimen/_14ssp"
                    app:textSizeHi="@dimen/_14ssp"
                    app:textSizeUr="@dimen/_16ssp"
                    android:textStyle="bold"
                    tools:text="AAh ko chahiye t" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="@dimen/_6sdp">
                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtNazamSubTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?primaryTextColor"
                    android:textSize="@dimen/_14ssp"
                    tools:text="AAh ko chahiye t" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtAuthor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="?primaryTextColor"
                    app:textSizeEn="@dimen/_10ssp"
                    app:textSizeHi="@dimen/_12ssp"
                    app:textSizeUr="@dimen/_12ssp"
                    tools:text="AAh ko chahiye t" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/poetEditorChoiceIcon"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:tint="?appIconColor"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_beginner_choice" />

                    <ImageView
                        android:id="@+id/poetPopularChoiceIcon"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:scaleType="fitXY"
                        android:tint="@color/dark_blue"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_editors_choice" />

                    <ImageView
                        android:id="@+id/poetaudioLink"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:scaleType="fitXY"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:tint="?appIconColor"
                        app:srcCompat="@drawable/ic_volume_medium" />

                    <ImageView
                        android:id="@+id/poetyoutubeLink"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:scaleType="fitXY"
                        android:tint="?appIconColor"
                        android:layout_marginEnd="@dimen/_19sdp"
                        app:srcCompat="@drawable/ic_video" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="?appDividerColor" />
</LinearLayout>