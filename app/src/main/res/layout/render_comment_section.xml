<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/layCommentSection"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtHeaderComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_40sdp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:letterSpacing=".2"
        android:text="COMMENTS"
        android:fontFamily="@font/lato_x_regular_eng"
        android:textColor="?primaryTextColor"
        android:textSize="@dimen/_20ssp"/>
    <TextView
        android:id="@+id/txtShareYourView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE YOUR VIEWS"
        android:fontFamily="@font/lato_x_regular_eng"
        android:layout_gravity="center"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textColor="?greyTextColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCommentHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_x_bold_eng"
            android:text="Comments"
            android:textColor="?primaryTextColor"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCommentHeaderCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10ssp"
            android:fontFamily="@font/lato_x_regular_eng"
            android:text=""
            android:textColor="?greyTextColor"
            android:textSize="@dimen/_18ssp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_18sdp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_16sdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUserImage"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_15sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/layAddComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layTagName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:background="@drawable/tag_name_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txtTagName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_regular"
                            android:padding="@dimen/_5sdp"
                            android:textColor="?primaryTextColor"
                            android:textSize="@dimen/_12ssp"
                            tools:text="Anuj Agrawal" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Add a comment..."
                        android:inputType="textMultiLine"
                        android:maxLength="500"
                        android:maxLines="5"
                        android:minHeight="@dimen/_40sdp"
                        android:minLines="2"
                        android:scrollbars="vertical"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="?appDividerColor" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layCancelComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:fontFamily="@font/lato_x_regular_eng"
                android:gravity="center_vertical|center_horizontal"
                android:padding="@dimen/_10sdp"
                android:text="Cancel"
                android:textColor="?greyTextColor"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/txtComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_dark_blue"
                android:ems="6"
                android:fontFamily="@font/lato_x_regular_eng"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Comment"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layCommentPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"/>
    <com.example.sew.views.paging_recycler_view.PagingRecyclerView
        android:id="@+id/rvComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:orientation="vertical"
        tools:listitem="@layout/cell_comment_section" />

    <LinearLayout
        android:id="@+id/layLoadMoreComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLoadMoreComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_x_bold_eng"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:background="@drawable/touch_effect"
            android:text="@string/load_more_comments"/>

        <View
            android:id="@+id/viewComment"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/dark_blue"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>