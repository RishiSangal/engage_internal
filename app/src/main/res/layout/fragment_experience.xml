<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_gray_background"
    tools:context=".module.VideoActivity">

    <include
        android:id="@+id/layHeaderExperience"
        layout="@layout/common_tool"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <TextView
            style="@style/HeadlineH4LightLeftBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_40dp"
            android:text="Hi, Jane"
            tools:text="Hi, Jane"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="@color/color_on_surface_primary_text"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="8sp"
            android:layout_marginTop="@dimen/margin_24dp"
            android:text="@string/experience_text"
            tools:text="@string/experience_text"
            />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:cardElevation="@dimen/card_elevation"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/margin_24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@color/color_on_surface_primary_text"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4sp"
                android:text="I’m new to hearing aids"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/color_on_surface_tertiary_text"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="4sp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="Start with the basics"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:cardElevation="@dimen/card_elevation"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/margin_24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@color/color_on_surface_primary_text"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4sp"
                android:text="I’ve worn hearing aids before"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@color/color_on_surface_tertiary_text"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="4sp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:text="Skip the basics"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>