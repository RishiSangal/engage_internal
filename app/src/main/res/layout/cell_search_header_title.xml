<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/_16sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingEnd="@dimen/_12sdp"
    android:orientation="horizontal">

    <com.example.sew.views.TitleTextViewType6
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:textSize="@dimen/_14ssp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:padding="@dimen/_2sdp"
        app:textSizeEn="@dimen/_12ssp"
        app:textSizeHi="@dimen/_12ssp"
        app:textSizeUr="@dimen/_14ssp"
        android:textColor="?greyTextColor"
        tools:text="Showing Result For : " />
    <com.example.sew.views.TitleTextViewType6
        android:id="@+id/txtSearchWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_10sdp"
        app:textSizeEn="@dimen/_12ssp"
        app:textSizeHi="@dimen/_12ssp"
        app:textSizeUr="@dimen/_14ssp"
        tools:text="ggggg" />


</LinearLayout>