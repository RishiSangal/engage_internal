<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?appBackgroundColor"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?appBackgroundColor"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_34sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:layout_weight=".20">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="@dimen/_90sdp"
                android:scaleType="centerCrop"
                android:tint="?primaryTextColor"
                app:srcCompat="@drawable/ic_rekhtalogo" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:orientation="vertical"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp">

            <LinearLayout
                android:id="@+id/layName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_weight=".23"
                android:background="@drawable/textlayouthint"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:textColorHint="?primaryTextColor"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edName"
                        style="@style/LatoRegular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?secondaryTextColor"
                        android:ellipsize="start"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="center_vertical"
                        android:hint="Name"
                        android:imeActionLabel="Next"
                        android:imeOptions="actionNext"
                        android:inputType="textNoSuggestions|textVisiblePassword"
                        android:nextFocusDown="@+id/edEmail"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingRight="@dimen/_6sdp"
                        android:singleLine="true"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_14ssp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layEmail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_weight=".23"
                android:background="@drawable/textlayouthint"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:imeActionLabel="Next"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:textColorHint="?primaryTextColor"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edEmail"
                        style="@style/LatoRegular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?appBackgroundColor"
                        android:ellipsize="start"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_email"
                        android:imeActionLabel="Next"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:nextFocusDown="@+id/signUppassword"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingRight="@dimen/_6sdp"
                        android:singleLine="true"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_14ssp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layPassword"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_weight=".23"
                android:background="@drawable/textlayouthint"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColorHint="?primaryTextColor"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edPassword"
                        style="@style/LatoRegular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?appBackgroundColor"
                        android:ellipsize="start"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingRight="@dimen/_6sdp"
                        android:singleLine="true"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_14ssp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_weight=".23"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSignUp"
                    style="@style/LatoRegular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_selector_sign"
                    android:fontFamily="@font/lato_bold"
                    android:text="Sign Up"
                    android:textAllCaps="true"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_14ssp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_weight=".23"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="#b9b6b6" />

                    <TextView
                        style="@style/LatoBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/lato_regular"
                        android:text="OR"
                        android:textColor="#bebcbc"
                        android:textSize="@dimen/_12ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="#b9b6b6" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_weight=".23"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:id="@+id/ripple"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleAlpha="0.1"
                        app:mrl_rippleBackground="#FFFFFF"
                        app:mrl_rippleColor="#64b5f6"
                        app:mrl_rippleDelayClick="true"
                        app:mrl_rippleDimension="10dp"
                        app:mrl_rippleDuration="350"
                        app:mrl_rippleFadeDuration="45"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="true"
                        app:mrl_ripplePersistent="true"
                        app:mrl_rippleRoundedCorners="10dp">

                        <RelativeLayout
                            android:id="@+id/layFacebookLogin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#3b5998"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_toStartOf="@+id/txtFacebook"
                                android:tint="@color/white"
                                app:srcCompat="@drawable/ic_facebook" />

                            <TextView
                                android:id="@+id/txtFacebook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/lato_bold"
                                android:paddingStart="3dp"
                                android:paddingLeft="3dp"
                                android:paddingEnd="3dp"
                                android:paddingRight="3dp"
                                android:text="Login With Facebook"
                                android:textColor="#fff"
                                android:textSize="@dimen/_14ssp" />

                        </RelativeLayout>

                    </com.balysv.materialripple.MaterialRippleLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="0.23"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/touch_effect"
                    android:elevation="0dp"
                    android:scaleType="centerCrop"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleAlpha="0.1"
                        app:mrl_rippleBackground="#FFFFFF"
                        app:mrl_rippleColor="@color/bg"
                        app:mrl_rippleDelayClick="true"
                        app:mrl_rippleDimension="10dp"
                        app:mrl_rippleDuration="350"
                        app:mrl_rippleFadeDuration="45"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="true"
                        app:mrl_ripplePersistent="true"
                        app:mrl_rippleRoundedCorners="10dp">

                        <RelativeLayout
                            android:id="@+id/layGoogleLogin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#dd4b39"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:layout_toStartOf="@+id/txtGoogle"
                                android:tint="@color/white"
                                app:srcCompat="@drawable/ic_googleplus" />

                            <TextView
                                android:id="@+id/txtGoogle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/lato_bold"
                                android:paddingStart="3dp"
                                android:paddingLeft="3dp"
                                android:paddingEnd="3dp"
                                android:paddingRight="3dp"
                                android:text="Login with Google+"
                                android:textColor="#fff"
                                android:textSize="@dimen/_14ssp" />

                        </RelativeLayout>

                    </com.balysv.materialripple.MaterialRippleLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:baselineAligned="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#b9b6b6" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layLogin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:background="@drawable/cont_selector"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtLogIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:text="Already have account? "
                android:textAllCaps="false"
                android:textColor="?greyTextColor"
                android:textSize="@dimen/_14ssp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text=" Sign in"
                android:textAllCaps="false"
                android:textColor="?greyTextColor"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>