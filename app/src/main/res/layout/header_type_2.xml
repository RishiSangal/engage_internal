<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <com.example.sew.views.CommonImageView
        android:id="@+id/imgBack"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_left_grey600_24dp"
        app:rotateForRtl="true" />

    <com.example.sew.views.TitleTextViewType6
        android:id="@+id/txtHeaderTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/black"
        app:textSizeEn="@dimen/_15ssp"
        app:textSizeHi="@dimen/_16ssp"
        app:textSizeUr="@dimen/_10ssp"
        tools:text="Home" />

    <ImageView
        android:id="@+id/imgHeaderMenu"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/ic_dots_vertical_grey600_24dp" />
</LinearLayout>