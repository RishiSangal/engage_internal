<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_51sdp"
    android:background="?appBackgroundColor"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="?appDividerColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="?appDividerColor"
        android:orientation="horizontal"
        android:weightSum="7">


        <ImageView
            android:id="@+id/imgFooterShareClose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_1sdp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="?appBackgroundColor"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_close_kitkat"
            android:tint="?appIconColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="?appBackgroundColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?appBackgroundColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">


            <ImageView
                android:id="@+id/imgFooterMultiShare"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_weight="1"
                android:background="?appBackgroundColor"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/ic_share_kitkat"
                android:tint="?appIconColor" />

            <com.example.sew.views.IconTextView
                android:id="@+id/txtFooterMultiCopy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?appBackgroundColor"
                android:gravity="center"
                android:text="@string/rico_copy"
                android:textColor="?appIconColor"
                android:textSize="@dimen/_25ssp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>