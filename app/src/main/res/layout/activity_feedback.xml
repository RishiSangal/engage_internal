<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?appBackgroundColor"
    android:orientation="vertical"
    tools:context=".activities.AboutUsActivity">

<!--    <include layout="@layout/header_type_2" />-->
    <include layout="@layout/header_type_4" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="?appDividerColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?appDividerColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_2sdp">
                    <com.example.sew.views.TitleTextViewType5
                        android:id="@+id/txtFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_24ssp"
                        app:textAllCaps="true"
                        android:textColor="?primaryTextColor"
                        tools:text="Feedback" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?appBackgroundColor"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:layout_marginTop="@dimen/_24sdp"
                            android:textColorHint="?primaryTextColor"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edName"
                                style="@style/LatoRegular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?appBackgroundColor"
                                android:ellipsize="start"
                                android:gravity="center_vertical"
                                android:hint="@string/name"
                                android:imeActionLabel="Next"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:paddingLeft="@dimen/_6sdp"
                                android:paddingRight="@dimen/_6sdp"
                                android:singleLine="true"
                                android:textColor="?primaryTextColor"
                                android:textCursorDrawable="@drawable/cursorwhite"
                                android:textSize="@dimen/_14ssp" />

                        </com.google.android.material.textfield.TextInputLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?appDividerColor"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?appBackgroundColor"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColorHint="?primaryTextColor"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edEmail"
                                style="@style/LatoRegular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?appBackgroundColor"
                                android:ellipsize="start"
                                android:gravity="center_vertical"
                                android:hint="@string/hint_email"
                                android:imeActionLabel="Next"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:paddingLeft="@dimen/_6sdp"
                                android:paddingRight="@dimen/_6sdp"
                                android:singleLine="true"
                                android:textColor="?primaryTextColor"
                                android:textCursorDrawable="@drawable/cursorwhite"
                                android:textSize="@dimen/_14ssp" />

                        </com.google.android.material.textfield.TextInputLayout>
                        <View
                            android:id="@+id/viewEmail"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?appDividerColor"/>




                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spnFeedbackType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:dropDownWidth="@dimen/_270sdp"
                        android:dropDownHorizontalOffset="20dp"
                        android:textColor="?primaryTextColor"
                        android:backgroundTint="?appIconColor"
                        android:overlapAnchor="false" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_36sdp"
                        android:background="?appDividerColor" />

                    <EditText
                        android:id="@+id/edFeedBack"
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_marginTop="18sp"
                        android:background="@drawable/textlayouthint"
                        android:fontFamily="sans-serif"
                        android:gravity="top|start"
                        android:maxLength="360"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_20sdp"
                        android:textColor="?primaryTextColor"
                        android:textColorHint="?greyTextColor"
                        android:textSize="@dimen/_14ssp"
                        tools:hint="write your feedback here..." />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_6sdp">

                        <com.example.sew.views.TitleTextViewType2
                            android:id="@+id/txtFeedbackCounter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="?greyTextColor"
                            tools:text="0/360" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/laySendFeedback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/feedback_btn"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                app:srcCompat="@drawable/ic_paperplane" />

                            <TextView
                                android:id="@+id/txtSendFeedbackTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@null"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_30sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/white"
                                tools:text="SEND" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <!--</android.support.v7.widget.CardView>-->


        </LinearLayout>

    </ScrollView>
</LinearLayout>