<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?appBackgroundColor"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_13sdp"
    android:paddingRight="@dimen/_13sdp">
    <com.example.sew.views.TitleTextViewType5
        android:id="@+id/txtTop100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-18dp"
        android:visibility="gone"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/_16sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_80ssp"
        tools:text="100" />

    <com.example.sew.views.TitleTextViewType5
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTop100"
        android:layout_alignParentStart="true"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textAllCaps="true"
        android:textColor="?primaryTextColor"
        android:textSize="@dimen/_40ssp"
        android:textStyle="normal"
        tools:text="MOST FAMOUS" />

    <com.example.sew.views.TitleTextViewType6
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/_24sdp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:textColor="?primaryTextColor"
        android:textIsSelectable="true"
        android:textSize="@dimen/_14ssp"
        tools:text="A selection of 100 most famous ghazals curated by Rekhta, based on popularity and quality of ghazals" />
    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?appDividerColor"
        android:layout_below="@+id/txtDescription"
        android:layout_marginTop="@dimen/_15sdp"/>
    <LinearLayout
        android:id="@+id/layfavSort"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/viewTop"
        android:orientation="horizontal"

        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_16sdp"
            android:orientation="vertical">
            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtFavCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:textColor="?primaryTextColor"
                android:text="23.7K"/>
            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?greyTextColor"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textStyle="normal"
                android:text="FAVORITE"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgShareUrl"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:tint="?appIconColor"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layoutDirection="ltr"
                app:srcCompat="@drawable/ic_share" />
            <ImageView
                android:id="@+id/imgFavorite"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:tint="?appIconColor"
                android:layout_gravity="center"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_favorite" />
            <View
                android:id="@+id/viewDivider"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="@dimen/_8sdp"
                android:background="?appDividerColor"/>
            <com.example.sew.views.IconTextView
                android:id="@+id/txtFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rico_controls"
                android:layout_gravity="center"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_30ssp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/viewBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?appDividerColor"
        android:layout_below="@+id/layfavSort"
        android:layout_marginBottom="@dimen/_35sdp"/>
    <View

        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_2sdp"
        android:layout_below="@id/viewBottom"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_22sdp"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_47sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:background="?appDividerColor" />
</RelativeLayout>