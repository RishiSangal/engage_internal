<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?appBackgroundColor"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_13sdp"
    android:paddingRight="@dimen/_13sdp">
    <com.example.sew.views.TitleTextViewType5
        android:id="@+id/txtTop100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-18dp"
        android:visibility="gone"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/_16sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_80ssp"
        tools:text="100" />

    <com.example.sew.views.TitleTextViewType5
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTop100"
        android:layout_alignParentStart="true"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textAllCaps="true"
        android:textColor="?primaryTextColor"
        android:textSize="@dimen/_40ssp"
        android:textStyle="normal"
        tools:text="MOST FAMOUS" />

    <com.example.sew.views.TitleTextViewType6
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/_24sdp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:textColor="?primaryTextColor"
        android:textIsSelectable="true"
        android:textSize="@dimen/_14ssp"
        tools:text="A selection of 100 most famous ghazals curated by Rekhta, based on popularity and quality of ghazals" />

    <View

        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_2sdp"
        android:layout_below="@id/txtDescription"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginBottom="@dimen/_47sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:background="?appDividerColor" />
</RelativeLayout>