<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <com.example.sew.views.CommonImageView
        android:id="@+id/imgBack"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@drawable/touch_effect"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_left_grey600_24dp"
        app:rotateForRtl="true" />

    <com.example.sew.views.TitleTextView
        android:id="@+id/txtHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_toStartOf="@+id/imgSearch"
        android:layout_toEndOf="@+id/imgBack"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="Home"
        android:textColor="@color/md_grey_800"
        android:textSize="@dimen/_15ssp" />

    <ImageView
        android:id="@+id/imgSearch"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/imgHeaderMenu"
        android:background="@drawable/touch_effect"
        android:scaleType="centerInside"
        android:tint="@color/md_grey_600"
        app:srcCompat="@drawable/ic_searchtab" />

    <ImageView
        android:id="@+id/imgHeaderMenu"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/touch_effect"
        android:scaleType="centerInside"
        android:src="@drawable/ic_dots_vertical_grey600_24dp" />
</RelativeLayout>