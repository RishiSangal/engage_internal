<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription">
<!--    android:background="@drawable/critique_bg"-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?appThirdBackground"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_32sdp">

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtSubmitCritiqueTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/closeModal"
                android:letterSpacing=".2"
                android:textStyle="bold"
                android:text="SUBMIT CRITIQUE"
                app:textSizeEn="@dimen/_11sdp"
                app:textSizeHi="@dimen/_13sdp"
                app:textSizeUr="@dimen/_11sdp"
                android:textAllCaps="true"
                android:layout_centerVertical="true"
                android:textColor="@color/md_grey_1400" />

            <ImageView
                android:id="@+id/closeModal"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:tint="?appIconColor"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_close" />
        </RelativeLayout>

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/critiqueLineNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:textColor="?primaryTextColor"
            app:textSizeEn="@dimen/_10sdp"
            app:textSizeHi="@dimen/_12sdp"
            app:textSizeUr="@dimen/_10sdp"
            android:textAllCaps="true"
            tools:text=" LINE #2" />

        <com.example.sew.views.TitleTextViewType10
            android:id="@+id/critiqueLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11sdp"
            android:textSize="@dimen/_16sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:textColor="?primaryTextColor"
            android:textStyle="italic"
            tools:text="ye bojh agar dil se utar jaa.e to achchha" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="?appDividerColor"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="start"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_15sdp"
                android:src="@drawable/icon" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/citiqueUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/critique_UserName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_line"
                    android:hint="NAME"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:singleLine="true"
                    android:padding="@dimen/_5sdp"
                    android:textColor="?primaryTextColor"
                    android:textColorHint="@color/hint_color"
                    android:textSize="@dimen/_14ssp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/citiqueEMAIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp">

            <EditText
                android:id="@+id/critique_UserEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="E-MAIL"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:background="@drawable/edittext_line"
                android:textColor="?primaryTextColor"
                android:textColorHint="@color/hint_color"
                android:textSize="@dimen/_14ssp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/citiqueUserCOMMENT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginBottom="15sp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp">

            <EditText
                android:id="@+id/critique_UserComment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_line"
                android:hint="COMMENT"
                android:imeActionLabel="Submit"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="?primaryTextColor"
                android:textColorHint="@color/hint_color"
                android:textCursorDrawable="@drawable/cursorwhite"
                android:textSize="@dimen/_14ssp" />
        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_32sdp">

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/critiqe_cancel"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/critiqueSubmit"
                android:padding="2sp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="CANCEL"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textAlignment="textEnd"
                android:textColor="?greyTextColor"
                app:textSizeEn="@dimen/_12sdp"
                app:textSizeHi="@dimen/_14sdp"
                app:textSizeUr="@dimen/_12sdp" />

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/critiqueSubmit"
                android:layout_width="80sp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="2sp"
                android:textAllCaps="true"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="SUBMIT"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                app:textSizeEn="@dimen/_12sdp"
                app:textSizeHi="@dimen/_14sdp"
                app:textSizeUr="@dimen/_12sdp" />
        </RelativeLayout>

    </LinearLayout>


</ScrollView>