<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.example.sew.common.TouchImageView
            android:id="@+id/imgShayariImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/layBottomContainer"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shadow_toolbar" />

        <LinearLayout
            android:id="@+id/layBottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/_30sdp"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp">

            <LinearLayout
                android:id="@+id/layPoetSherContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <com.example.sew.views.TitleTextViewType2
                android:id="@+id/txtPoetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_23sdp"
                android:paddingBottom="18dp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                tools:text="FIROq gorakhpuri" />

            <LinearLayout
                android:id="@+id/lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_17sdp">

                <LinearLayout
                    android:id="@+id/laySeeGhazal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sher_ghazalIcon"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:src="@drawable/ic_glas"
                        android:tint="@color/dark_blue" />

                    <com.example.sew.views.TitleTextViewType2
                        android:id="@+id/txtSeeGhazalTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        tools:text="See Ghazal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_31sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:src="@drawable/ic_tag_kitkat"
                        android:tint="#ff9900" />

                    <com.example.sew.views.TitleTextViewType2
                        android:id="@+id/txtTagsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        tools:text="See Ghazal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgShare"
            android:layout_width="0dp"
            android:layout_height="@dimen/_56sdp"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_share" />
        <ImageView
            android:id="@+id/imgFavorite"
            android:layout_width="0dp"
            android:layout_height="@dimen/_56sdp"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_favorite"
            android:tint="@color/white" />
        <ImageView
            android:id="@+id/imgSave"
            android:layout_width="0dp"
            android:layout_height="@dimen/_56sdp"
            android:layout_weight="1"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/ic_save"
            android:tint="@color/white" />

    </LinearLayout>
</LinearLayout>