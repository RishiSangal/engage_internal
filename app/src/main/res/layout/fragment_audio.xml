<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/audioCardList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/musicPlayer"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="2sp"
        app:cardCornerRadius="5sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/audioHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/audioTitleHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp">

                    <com.example.sew.views.TitleTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_toStartOf="@+id/spinner"
                        android:layout_toLeftOf="@+id/spinner"
                        android:letterSpacing=".2"
                        android:padding="5sp"
                        android:text="Audios"
                        android:textAllCaps="true"
                        android:textStyle="italic" />

                    <ImageView
                        android:id="@+id/spinner"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:paddingTop="4dp"
                        android:paddingRight="4dp"
                        android:src="@drawable/down_image">

                    </ImageView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ListView
                android:id="@+id/audioListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/audioHeader"
                android:divider="@null"
                android:minHeight="200sp">

            </ListView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/musicPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="5sp"
        android:orientation="vertical"
        android:visibility="visible">

        <!--<include layout="@layout/fragment_poet_detailed_audio_player" />-->
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/playerCard"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:cardElevation="3sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="horizontal">

            <org.Rekhta.utils.RoundedImageView
                android:id="@+id/currentAudioAuthorImg"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:padding="5sp"
                android:src="@drawable/bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:orientation="vertical"
                android:weightSum="2">

                <org.Rekhta.fonts.MerriweatherLightTextView
                    android:id="@+id/currentAudioAuthorName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Ghazal Audio Title"
                    android:textSize="16sp" />

                <org.Rekhta.fonts.MerriweatherLightTextView
                    android:id="@+id/currentAudioTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingTop="5sp"
                    android:singleLine="true"
                    android:text="TITLE HAI YEHA"
                    android:textSize="11sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/playButtonImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:padding="9sp"
                    app:srcCompat="@drawable/ic_pause" />

                <ProgressBar
                    android:id="@+id/audioLoadingImg"
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:padding="5sp"
                    android:visibility="visible" />
            </FrameLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
