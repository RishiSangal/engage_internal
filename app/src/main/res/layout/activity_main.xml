<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?appBackgroundColor"
    tools:context=".activities.HomeActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header_type_1" />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/header"
        android:background="?appDividerColor"/>
    <ListView
        android:id="@+id/lstHomeCollection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:background="?appBackgroundColor"
        android:layout_above="@+id/footer"
        android:divider="@null" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/footer"
        android:layout_alignParentBottom="true">
        <include layout="@layout/bottom_navigation"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layDarkModeAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <include layout="@layout/home_footer_dark_mode_information"/>

    </LinearLayout>
</RelativeLayout>