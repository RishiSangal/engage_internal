<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/langbg">

    <ImageView
        android:id="@+id/splashRlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/rtxt"
        android:visibility="visible" />

    <com.example.sew.views.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_50ssp" />

    <ImageView
        android:id="@+id/imgWelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splashRlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_48sdp"
        android:src="@drawable/welcome_txt"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/layLanguageSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?appBackgroundColor"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/text_language"
                style="@style/LatoBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/select_lang"
                android:textColor="?primaryTextColor"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/language_content"
                style="@style/LatoRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="@string/lang_content"
                android:textColor="?primaryTextColor"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:clipToPadding="false"
                android:layoutDirection="ltr"
                android:paddingBottom="@dimen/_1sdp">

                <TextView
                    android:id="@+id/txtMenuLanguageEn"
                    style="@style/LatoBold"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_language_unselected"
                    android:gravity="center"
                    android:text="EN"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/txtMenuLanguageHin"
                    style="@style/LatoBold"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_language_unselected"
                    android:gravity="center"
                    android:text="HI"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/txtMenuLanguageUr"
                    style="@style/LatoBold"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_language_unselected"
                    android:gravity="center"
                    android:text="UR"
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:paddingTop="@dimen/_7sdp">

            <Button
                android:id="@+id/btnContinue"
                style="@style/LatoBold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/cont_selector"
                android:text="CONTINUE"
                android:textColor="?primaryTextColor"
                android:textSize="@dimen/_14ssp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>