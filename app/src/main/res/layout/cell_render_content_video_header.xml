<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_effect"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_effect"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_12sdp"
        android:paddingTop="@dimen/_9sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_12sdp">


            <com.example.sew.views.TitleTextView
                android:id="@+id/txtPoetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="?primaryTextColor"
                android:textSize="@dimen/_14ssp"
                tools:text="FAIZ AHMAD FAIZ" />

            <com.example.sew.views.TitleTextViewType2
                android:id="@+id/txtHeaderContentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?greyTextColor"
                android:textSize="@dimen/_12ssp"
                tools:text="na kisi pe ZakHam hj jhddd d d dddd dd d dd" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imgFavorite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/white"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_favourite_kitkat"
            android:tint="@color/md_grey_800"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgShare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_1sdp"
            android:background="@color/white"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_share_kitkat"
            android:tint="@color/md_grey_800"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="?appDividerColor"
        android:visibility="visible" />

</LinearLayout>