<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetList_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?appBackgroundColor"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_46sdp">

        <com.example.sew.views.SquareImageView
            android:id="@+id/imgSupportRekhta"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:background="@drawable/donation_base"/>

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtSupportRekhtaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:textColor="#664B3D"
            android:textSize="@dimen/_24ssp"
            android:textStyle="bold"
            tools:text="Feature Video" />
        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtSupportRekhtaDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSupportRekhtaTitle"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_26sdp"
            android:textColor="@color/black"
            android:lineSpacingMultiplier="1.2"
            android:fallbackLineSpacing="true"
            app:textSizeEn="@dimen/_12ssp"
            app:textSizeHi="@dimen/_14ssp"
            app:textSizeUr="@dimen/_14ssp"
            android:textStyle="normal"
            tools:text="Feature Video" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:layout_alignBottom="@id/imgSupportRekhta"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layDonateNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#5C5C5C"
                android:padding="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp">
                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtDonateNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    tools:text="Donate Now"
                    android:textSize="@dimen/_14ssp"/>
                <com.example.sew.views.CommonImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/white"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    app:rotateForRtl="true" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layDonateViaPaytm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#5C5C5C"
                android:padding="@dimen/_10sdp">


                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtDonateViaPaytm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    tools:text="Donate Via Paytm"
                    android:textSize="@dimen/_14ssp"/>
                <com.example.sew.views.CommonImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/white"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    app:rotateForRtl="true" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>