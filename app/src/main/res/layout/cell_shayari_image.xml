<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetTemplate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?appBackgroundColor"
    android:paddingStart="@dimen/_6sdp"
    android:paddingEnd="@dimen/_6sdp">

    <LinearLayout
        android:id="@+id/viewHo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shayari_image_background"
        android:orientation="vertical"
        android:paddingStart="@dimen/_3sdp"
        android:paddingTop="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:paddingEnd="@dimen/_3sdp">

        <ImageView
            android:id="@+id/imgShayariImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/icon" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:padding="@dimen/_3sdp"
            android:background="?appBackgroundColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:tint="?appIconColor"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layoutDirection="ltr"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_share" />

            <ImageView
                android:id="@+id/imgFavorite"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:tint="?appIconColor"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_favorite" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFavorites"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_7sdp"
                android:tint="@color/md_grey_800"
                app:srcCompat="@drawable/ic_favorite" />

            <com.example.sew.views.TitleTextViewType2
                android:id="@+id/txtLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_13sdp"
                android:textSize="@dimen/_14ssp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_1sdp"
                tools:text="24" />

            <ImageView
                android:id="@+id/imgShares"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_5sdp"
                android:tint="@color/md_grey_800"
                app:srcCompat="@drawable/ic_share" />

            <com.example.sew.views.TitleTextViewType2
                android:id="@+id/txtShareCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14ssp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_gravity="center"
                tools:text="24" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>