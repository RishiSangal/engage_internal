<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/poetList_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_effect"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/offlineFavIcon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:tint="?appIconColor"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:srcCompat="@drawable/ic_favorite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/offlineFavIcon"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/_16sdp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtNazamTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="@dimen/_5sdp"
                    android:textColor="?darkGreyTextColor"
                    app:textSizeEn="@dimen/_14ssp"
                    app:textSizeHi="@dimen/_14ssp"
                    app:textSizeUr="@dimen/_18ssp"
                    android:textStyle="bold"
                    tools:text="AAh ko chahiye t" />

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtNazamSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textColor="?darkGreyTextColor"
                    app:textSizeEn="@dimen/_14ssp"
                    app:textSizeHi="@dimen/_14ssp"
                    app:textSizeUr="@dimen/_16ssp"
                    tools:text="AAh ko chahiye t" />

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:background="@drawable/touch_effect"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/dark_blue"
                    app:textSizeEn="@dimen/_10ssp"
                    app:textSizeHi="@dimen/_10ssp"
                    app:textSizeUr="@dimen/_14ssp"
                    tools:text="AAh ko chahiye t" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/imagecontainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/poetNazmeditorchoice"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:tint="#fbb167"
                app:srcCompat="@drawable/ic_beginner_choice" />

            <ImageView
                android:id="@+id/poetNazmpopularchoice"
                android:layout_width="14dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:scaleType="fitXY"
                android:tint="@color/dark_blue"
                app:srcCompat="@drawable/ic_editors_choice" />

            <ImageView
                android:id="@+id/poetNazmaudioLink"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:scaleType="fitXY"
                android:tint="?appIconColor"
                app:srcCompat="@drawable/ic_volume_medium" />

            <ImageView
                android:id="@+id/poetNazmyoutubeLink"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:scaleType="fitXY"
                android:tint="?appIconColor"
                app:srcCompat="@drawable/ic_video" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:background="?appDividerColor" />
</RelativeLayout>