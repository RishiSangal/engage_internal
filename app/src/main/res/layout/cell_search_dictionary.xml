<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="@dimen/_4sdp"
    android:clipToPadding="false"
    tools:targetApi="lollipop"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:paddingStart="@dimen/_3sdp"
        android:background="@drawable/background_with_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_15sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_24sdp">

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtWord"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="0dp"
                    android:textColor="?primaryTextColor"
                    app:textSizeEn="@dimen/_24ssp"
                    app:textSizeHi="@dimen/_24ssp"
                    app:textSizeUr="@dimen/_20ssp"
                    android:textStyle="italic"
                    tools:text="Golob" />
                <com.example.sew.views.CommonImageView
                    android:id="@+id/imgWordAudio"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:tint="@color/dark_blue"
                    app:rotateForRtl="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_audio" />
                <ImageView
                    android:id="@+id/imgWordFavorite"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:tint="@color/md_grey_800"
                    app:srcCompat="@drawable/ic_favorite" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtHindi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:includeFontPadding="true"
                    android:fontFamily="@font/noto_devanagari_hin"
                    android:textColor="?primaryTextColor"
                    android:textSize="@dimen/_16ssp"
                    tools:text="golob" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_9sdp"
                    android:layout_marginEnd="@dimen/_9sdp"
                    android:src="@drawable/dictionary_dot" />

                <TextView
                    android:id="@+id/txtUrdu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:includeFontPadding="true"
                    android:fontFamily="@font/noto_nastaliq_regular_urdu"
                    android:textColor="?primaryTextColor"
                    android:textSize="@dimen/_14ssp"
                    tools:text="golob" />
            </LinearLayout>



            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtEngMeaning1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center_vertical"
                android:includeFontPadding="true"
                android:textSize="@dimen/_14ssp"
                android:textColor="?primaryTextColor"
                android:layout_marginEnd="@dimen/_26sdp"
                android:layout_marginTop="@dimen/_20sdp"
                tools:text="Globe" />

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtEngMeaning2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/_2sdp"
                android:textColor="?primaryTextColor"
                android:layout_marginEnd="@dimen/_26sdp"
                android:textSize="@dimen/_14ssp"
                tools:text="Globe" />

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtEngMeaning3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:maxLines="3"
                android:textColor="?primaryTextColor"
                android:textSize="@dimen/_14ssp"
                android:layout_marginEnd="@dimen/_26sdp"
                tools:text="Pen name of great poet  Asadullah Khan gdfgdfgdgdfgdfgdfgdfg"
                android:layout_marginBottom="@dimen/_26sdp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>