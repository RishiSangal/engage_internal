<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="?appBackgroundColor"
    android:orientation="vertical">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?appBackgroundColor">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?appBackgroundColor"
                    android:visibility="visible"
                    app:layout_collapseMode="pin"
                    android:orientation="vertical">

                    <com.example.sew.views.TitleTextViewType5
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:includeFontPadding="false"
                        android:textColor="?primaryTextColor"
                        android:textSize="@dimen/_24ssp"
                        tools:text="100"/>

                    <com.example.sew.views.TitleTextViewType6
                        android:id="@+id/txtDescription"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/txtTitle"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="@dimen/_1sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:textColor="?primaryTextColor"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/_14ssp"
                        tools:text="A selection of 100 most famous ghazals curated by Rekhta, based on popularity and quality of ghazals" />

                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

<!--            <androidx.appcompat.widget.Toolbar-->
<!--                android:id="@+id/toolbar"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:layout_anchorGravity="bottom"-->
<!--                android:background="?appBackgroundColor">-->


<!--            </androidx.appcompat.widget.Toolbar>-->
        </com.google.android.material.appbar.AppBarLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="?appBackgroundColor"
                android:gravity="end"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_9sdp"
                android:orientation="horizontal">

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtRemoveAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/touch_effect"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="?primaryTextColor"
                    android:textSize="@dimen/_14ssp"
                    tools:text="Remove All" />

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtRemoveSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/touch_effect"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textColor="?primaryTextColor"
                    android:textSize="@dimen/_14ssp"
                    tools:text="Remove Selected" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFavImageShayari"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="?appBackgroundColor" />

                <com.example.sew.views.TitleTextViewType6
                    android:id="@+id/txtNoSavedImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:textColor="?primaryTextColor"
                    android:textSize="@dimen/_16ssp"
                    android:visibility="visible"
                    tools:text="Saved images will be shown here" />

            </RelativeLayout>
        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>