<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBannerImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/shayari_image_placeholder" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imgBannerImage"
            android:layout_alignBottom="@id/imgBannerImage"
            android:background="@drawable/shadow_toolbar" />

        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtHeaderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            tools:text="Wasim Barelvi"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_above="@+id/txtHeaderSubTitle"
            android:textSize="@dimen/_20ssp" />
        <com.example.sew.views.TitleTextViewType6
            android:id="@+id/txtHeaderSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            tools:text="Lorem ipsum dolor sit"
            android:textColor="@color/white"
            android:layout_alignBottom="@id/imgBannerImage"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_48sdp"
            android:textSize="@dimen/_15ssp" />
    </RelativeLayout>
</LinearLayout>