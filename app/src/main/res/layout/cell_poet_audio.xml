<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_effect"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_64sdp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_logo"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_toEndOf="@+id/iv_logo"
            android:paddingStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_3sdp">

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtAudioTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?primaryTextColor"
                android:textSize="@dimen/_14ssp"
                tools:text="na kisi pe ZakHam hj jhddd d d dddd dd d dd" />

            <com.example.sew.views.TitleTextViewType6
                android:id="@+id/txtPoetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAudioTitle"
                android:layout_marginTop="@dimen/_8sdp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="?primaryTextColor"
                android:textSize="@dimen/_10ssp"
                tools:text="FAIZ AHMAD FAIZ" />
          <LinearLayout
              android:id="@+id/layAudioDuration"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:visibility="gone"
              android:layout_centerVertical="true"
              android:layout_marginTop="@dimen/_18sdp"
              android:layout_below="@+id/txtPoetName">
              <ImageView
                  android:layout_width="@dimen/_12sdp"
                  android:layout_height="@dimen/_12sdp"
                  app:srcCompat="@drawable/ic_play"
                  android:tint="?appIconColor"
                  android:layout_gravity="center"/>
              <com.example.sew.views.TitleTextViewType6
                  android:id="@+id/txtTimeDuration"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:maxLines="1"
                  android:layout_marginStart="@dimen/_4sdp"
                  android:text="11:15"
                  android:layout_gravity="center"
                  android:textAllCaps="true"
                  android:textColor="?appIconColor"
                  android:textSize="@dimen/_9ssp" />
          </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/poetTemplateFavIcon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:tint="?appIconColor"
            android:layout_marginEnd="@dimen/_4sdp"
            app:srcCompat="@drawable/ic_favorite" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?appDividerColor"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:visibility="visible" />

</LinearLayout>